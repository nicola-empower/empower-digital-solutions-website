---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us | Empower Digital Solutions">
  <div class="container mx-auto px-6 py-20">
    <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-10 text-center">
      Ready to build something custom? Send us a message and we'll get back to
      you within 24 hours.
    </p>

    <div
      class="bg-white rounded-2xl shadow-xl overflow-hidden grid grid-cols-1 lg:grid-cols-5"
    >
      <div
        class="lg:col-span-2 bg-linear-to-br from-purple-900 to-indigo-900 p-10 text-white flex flex-col justify-between relative overflow-hidden"
      >
        <div
          class="absolute top-0 right-0 -mt-10 -mr-10 w-40 h-40 bg-white opacity-10 rounded-full blur-2xl"
        >
        </div>

        <div>
          <h3 class="text-2xl font-bold mb-6">Contact Info</h3>
          <p class="text-purple-100 mb-8 leading-relaxed">
            Fill out the form or reach out to us directly. We're always happy to
            chat about new ideas.
          </p>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-6 h-6 text-pink-400 mt-1 shrink-0"
                ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                  d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
              >
              <div>
                <p class="text-sm font-semibold text-purple-200">Email</p>
                <a
                  href="mailto:nicola@empowerdigitalsolutions.co.uk"
                  class="hover:text-white transition break-all"
                >
                  nicola@empowerdigitalsolutions.co.uk
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-6 h-6 text-pink-400 mt-1 shrink-0"
                ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                ></path><circle cx="12" cy="10" r="3"></circle></svg
              >
              <div>
                <p class="text-sm font-semibold text-purple-200">Location</p>
                <p>Stenhousemuir, Scotland</p>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-12 lg:mt-0">
          <p class="text-xs text-purple-300">
            © 2025 Empower Digital Solutions
          </p>
        </div>
      </div>

      <div class="p-10 lg:col-span-3 bg-white">
        <form id="contact-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="group">
              <label
                for="name"
                class="block text-sm font-medium text-slate-700 mb-2"
                >Your Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                placeholder="John Doe"
                required
                class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-purple-500 focus:ring-4 focus:ring-purple-500/10 outline-none transition-all bg-slate-50 group-hover:bg-white"
              />
            </div>

            <div class="group">
              <label
                for="email"
                class="block text-sm font-medium text-slate-700 mb-2"
                >Email Address</label
              >
              <input
                type="email"
                id="email"
                name="email"
                placeholder="john@example.com"
                required
                class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-purple-500 focus:ring-4 focus:ring-purple-500/10 outline-none transition-all bg-slate-50 group-hover:bg-white"
              />
            </div>
          </div>

          <div class="group">
            <label
              for="message"
              class="block text-sm font-medium text-slate-700 mb-2"
              >Your Message</label
            >
            <textarea
              id="message"
              name="message"
              rows="5"
              placeholder="Tell us about your project..."
              required
              class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-purple-500 focus:ring-4 focus:ring-purple-500/10 outline-none transition-all bg-slate-50 group-hover:bg-white resize-none"
            ></textarea>
          </div>

          <button
            id="submit-btn"
            type="submit"
            class="w-full md:w-auto bg-slate-900 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-600 hover:-translate-y-1 transition-all duration-200 flex items-center justify-center gap-2 group shadow-lg shadow-purple-900/20"
          >
            <span>Send Message</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-4 h-4 group-hover:translate-x-1 transition-transform"
              ><path d="m22 2-7 20-4-9-9-4Z"></path><path d="M22 2 11 13"
              ></path></svg
            >
          </button>
          <p id="form-status" class="text-center text-sm font-semibold hidden">
          </p>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { supabase } from "../lib/supabase";

  const form = document.getElementById("contact-form") as HTMLFormElement;
  const submitBtn = document.getElementById("submit-btn");
  const statusMsg = document.getElementById("form-status");

  // Pre-fill message based on package selection
  const urlParams = new URLSearchParams(window.location.search);
  const pkg = urlParams.get("package");
  const messageBox = document.getElementById("message") as HTMLTextAreaElement;

  if (pkg && messageBox) {
    const packages: Record<string, string> = {
      launchpad: "The Launchpad Package (£1,295)",
      "brand-authority": "The Brand Authority Package",
      "ops-engine": "The Operations Engine Package",
      "full-ecosystem": "The Full Ecosystem Package",
    };

    const pkgName = packages[pkg] || pkg;
    messageBox.value = `Hi, I'm interested in ${pkgName}.`;
  }

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      if (submitBtn) {
        submitBtn.setAttribute("disabled", "true");
        submitBtn.innerHTML = "Sending...";
      }

      const formData = new FormData(form);
      const name = formData.get("name");
      const email = formData.get("email");
      const message = formData.get("message");

      try {
        const { error } = await supabase
          .from("leads")
          .insert([{ name, email, message, source: "website_contact" }]);

        if (error) throw error;

        if (statusMsg) {
          statusMsg.textContent = "Message sent! We'll be in touch soon.";
          statusMsg.className =
            "text-center text-sm font-semibold text-green-600 mt-4 block";
        }
        form.reset();
      } catch (error) {
        console.error("Error submitting form:", error);
        if (statusMsg) {
          statusMsg.textContent = "Something went wrong. Please try again.";
          statusMsg.className =
            "text-center text-sm font-semibold text-red-600 mt-4 block";
        }
      } finally {
        if (submitBtn) {
          submitBtn.removeAttribute("disabled");
          submitBtn.innerHTML = `
            <span>Send Message</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 group-hover:translate-x-1 transition-transform"><path d="m22 2-7 20-4-9-9-4Z"/><path d="M22 2 11 13"/></svg>
          `;
        }
      }
    });
  }
</script>
