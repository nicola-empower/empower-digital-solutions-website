  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const initialView = document.getElementById('initial-view');
      const portalView = document.getElementById('portal-view');
      const formView = document.getElementById('form-view');

      const contractCheckbox = document.getElementById('contract-checkbox');
      const progressBar = document.getElementById('progress-bar');
      const completionText = document.getElementById('completion-text');

      const backToDashboardBtn = document.getElementById('back-to-dashboard');
      const completeFormBtn = document.getElementById('complete-form');
      const restartDemoBtn = document.getElementById('restart-demo');
      const dashboardCards = document.getElementById('dashboard-cards');

      const initialDashboardHTML = {
        contract: `<div class="flex items-center justify-between mb-3"><h2 class="font-bold text-xl flex items-center">âœ… Contract Status</h2><span class="text-sm opacity-90">Just now</span></div><p class="text-lg font-semibold">Signed & Secured</p><p class="text-sm opacity-90 mt-1">Contract #2024-0892</p>`,
        form: `<div class="flex items-center justify-between mb-3"><h2 class="font-bold text-xl text-[#0c4b54] flex items-center">ğŸ“ Onboarding Form</h2><span class="text-xs bg-orange-100 text-orange-600 px-2 py-1 rounded-full">Pending</span></div><p class="text-gray-600">Ready to complete</p><p class="text-sm text-[#9686a9] mt-1 font-medium">Click to start â†’</p>`,
        files: `<div class="flex items-center justify-between mb-3"><h2 class="font-bold text-xl text-[#0c4b54] flex items-center">ğŸ“ Project Files</h2><span class="text-xs bg-gray-200 text-gray-600 px-2 py-1 rounded-full">Waiting</span></div><p class="text-gray-600">Upload area ready</p><p class="text-sm text-gray-400 mt-1">Max 100MB per file</p>`,
        call: `<div class="flex items-center justify-between mb-3"><h2 class="font-bold text-xl text-[#0c4b54] flex items-center">ğŸ“… Kick-off Call</h2><span class="text-xs bg-gray-200 text-gray-600 px-2 py-1 rounded-full">Waiting</span></div><p class="text-gray-600">Schedule when ready</p><p class="text-sm text-gray-400 mt-1">30-45 minutes</p>`
      };

      let completedSteps = 1;
      const totalSteps = 4;

      const updateProgress = () => {
        const percentage = (completedSteps / totalSteps) * 100;
        if (progressBar) progressBar.style.width = `${percentage}%`;
        if (completionText) {
            completionText.textContent = `${completedSteps} of ${totalSteps} steps completed`;
            if (completedSteps === totalSteps) {
                completionText.parentElement.classList.remove('bg-green-50', 'text-green-700');
                completionText.parentElement.classList.add('bg-blue-100', 'text-blue-700');
                completionText.textContent = 'Onboarding Complete! ğŸ‰';
            } else {
                completionText.parentElement.classList.add('bg-green-50', 'text-green-700');
                completionText.parentElement.classList.remove('bg-blue-100', 'text-blue-700');
            }
        }
      };

      const showView = (viewToShow) => [initialView, portalView, formView].forEach(view => {
        if (view) view.classList.toggle('view-hidden', view !== viewToShow);
      });

      const setupCard = (id, html, classes) => {
        const card = document.getElementById(id);
        if (card) {
            card.innerHTML = html;
            card.className = `completion-item p-6 rounded-xl ${classes}`;
        }
      };

      const resetDemo = () => {
        completedSteps = 1;
        if (contractCheckbox) contractCheckbox.checked = false;
        setupCard('contract-status', '', 'bg-gray-50 dark:bg-slate-700');
        setupCard('form-status', initialDashboardHTML.form, 'bg-gray-50 dark:bg-slate-700 cursor-pointer hover:bg-gray-100 dark:hover:bg-slate-600');
        setupCard('files-status', initialDashboardHTML.files, 'bg-gray-50 dark:bg-slate-700');
        setupCard('call-status', initialDashboardHTML.call, 'bg-gray-50 dark:bg-slate-700');
        updateProgress();
        showView(initialView);
      };

      const completeStep = (stepNumber) => {
        if (completedSteps >= stepNumber) return;
        completedSteps = stepNumber;
        updateProgress();

        switch (stepNumber) {
          case 2: // Form
            setupCard('form-status', `<div class="flex items-center justify-between mb-3"><h2 class="font-bold text-xl flex items-center">âœ… Onboarding Form</h2><span class="text-sm opacity-90">Just now</span></div><p class="text-lg font-semibold">Form Completed</p><p class="text-sm opacity-90 mt-1">All details captured</p>`, 'completed');
            setTimeout(() => completeStep(3), 1500);
            break;
          case 3: // Files
            setupCard('files-status', `<div class="flex items-center justify-between mb-3"><h2 class="font-bold text-xl flex items-center">âœ… Project Files</h2><span class="text-sm opacity-90">A moment ago</span></div><p class="text-lg font-semibold">3 Files Uploaded</p><p class="text-sm opacity-90 mt-1">Logo, brand guide, content</p>`, 'completed');
            setupCard('call-status', `<div class="flex items-center justify-between mb-3"><h2 class="font-bold text-xl text-[#0c4b54] flex items-center">ğŸ“… Book Kick-off Call</h2></div><p class="text-gray-600">Final step!</p><p class="text-sm text-[#9686a9] mt-1 font-medium">Click to book â†’</p>`, 'bg-gray-50 dark:bg-slate-700 cursor-pointer hover:bg-gray-100 dark:hover:bg-slate-600 interactive-step');
            break;
          case 4: // Call
            setupCard('call-status', `<div class="flex items-center justify-between mb-3"><h2 class="font-bold text-xl flex items-center">âœ… Kick-off Call</h2><span class="text-sm opacity-90">Just now</span></div><p class="text-lg font-semibold">Booked for 5th Aug, 10am</p><p class="text-sm opacity-90 mt-1">Check your calendar!</p>`, 'completed');
            break;
        }
      };

      if (contractCheckbox) {
        contractCheckbox.addEventListener('change', () => {
          if (contractCheckbox.checked) {
            setTimeout(() => {
              resetDemo();
              setupCard('contract-status', initialDashboardHTML.contract, 'completed');
              showView(portalView);
            }, 300);
          }
        });
      }

      if (dashboardCards) {
        dashboardCards.addEventListener('click', (e) => {
          if (e.target.closest('#form-status:not(.completed)')) showView(formView);
          if (e.target.closest('#call-status.interactive-step')) completeStep(4);
        });
      }

      if (backToDashboardBtn) backToDashboardBtn.addEventListener('click', () => showView(portalView));
      if (completeFormBtn) {
        completeFormBtn.addEventListener('click', () => {
          completeStep(2);
          showView(portalView);
        });
      }
      if (restartDemoBtn) restartDemoBtn.addEventListener('click', resetDemo);

      resetDemo();
    });
  </script>
