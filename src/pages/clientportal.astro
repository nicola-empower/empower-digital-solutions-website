      transform: translate(-50%, -50%);
      line-height: 1;
    }

    .view-container {
      transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .view-hidden {
      opacity: 0;
      transform: translateY(20px) scale(0.98);
      height: 0;
      overflow: hidden;
      pointer-events: none;
    }

    .progress-bar {
      transition: width 0.8s ease-out;
    }

    .completion-item {
      transition: all 0.4s ease;
    }

