---
import Layout from "../../../layouts/Layout.astro";
import { Globe, Truck, Anchor, ArrowRight, ArrowLeft, Box } from "lucide-astro";
---

<Layout title="North Star Logistics | The Titan Vault">
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&family=Open+Sans:wght@400;600&display=swap");

        .font-titan-header {
            font-family: "Roboto", sans-serif;
        }
        .font-titan-body {
            font-family: "Open Sans", sans-serif;
        }
    </style>

    <main
        class="bg-white text-[#00205B] min-h-screen selection:bg-[#00205B] selection:text-white relative overflow-hidden"
    >
        <!-- Navigation -->
        <nav
            class="absolute top-0 left-0 w-full p-6 z-50 flex justify-between items-center bg-white/90 backdrop-blur-md border-b border-gray-200"
        >
            <a
                href="/studio/titan"
                class="flex items-center gap-2 font-titan-header font-bold text-sm uppercase tracking-widest hover:text-[#DC2626] transition-colors"
            >
                <ArrowLeft class="w-4 h-4" /> Back to Vault
            </a>
            <div class="flex items-center gap-2">
                <div
                    class="w-8 h-8 bg-[#00205B] flex items-center justify-center text-white font-black rounded-sm"
                >
                    N
                </div>
                <div
                    class="font-titan-header font-black text-lg tracking-tighter"
                >
                    NORTH STAR
                </div>
            </div>
            <button
                class="bg-[#DC2626] text-white px-6 py-2 rounded-sm font-titan-header font-bold text-sm uppercase hover:bg-red-700 transition-colors"
            >
                Client Portal
            </button>
        </nav>

        <!-- HERO SECTION -->
        <section
            class="relative h-screen w-full flex items-center justify-center bg-[#00205B]"
        >
            <!-- Background Image -->
            <div class="absolute inset-0 z-0 opacity-40">
                <img
                    src="/images/north-star-hero.png"
                    alt="Global Logistics"
                    class="w-full h-full object-cover"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-r from-[#00205B] via-[#00205B]/80 to-transparent"
                >
                </div>
            </div>

            <!-- Grid Overlay -->
            <div
                class="absolute inset-0 z-0 opacity-10"
                style="background-image: linear-gradient(#fff 1px, transparent 1px), linear-gradient(90deg, #fff 1px, transparent 1px); background-size: 50px 50px;"
            >
            </div>

            <div
                class="max-w-7xl mx-auto w-full px-6 relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
            >
                <div class="text-white">
                    <div
                        class="inline-flex items-center gap-2 border border-white/30 px-3 py-1 rounded-sm text-xs font-titan-header font-bold uppercase tracking-widest mb-8 bg-white/10 backdrop-blur-sm"
                    >
                        <span
                            class="w-2 h-2 bg-[#DC2626] rounded-full animate-pulse"
                        ></span>
                        System Operational
                    </div>

                    <h1
                        class="font-titan-header font-black text-6xl md:text-8xl mb-6 leading-none tracking-tight"
                    >
                        MOVING<br />THE WORLD.
                    </h1>

                    <p
                        class="font-titan-body text-xl md:text-2xl text-gray-300 mb-10 max-w-xl leading-relaxed"
                    >
                        From Shanghai to Seattle in 14 hours. The supply chain
                        infrastructure for the Fortune 500. Scale without
                        friction.
                    </p>

                    <div class="flex flex-col sm:flex-row gap-4">
                        <button
                            class="bg-[#DC2626] text-white px-8 py-4 rounded-sm font-titan-header font-bold text-lg uppercase hover:bg-red-700 transition-colors flex items-center justify-center gap-2"
                        >
                            Track Shipment <ArrowRight class="w-5 h-5" />
                        </button>
                        <button
                            class="border-2 border-white text-white px-8 py-4 rounded-sm font-titan-header font-bold text-lg uppercase hover:bg-white hover:text-[#00205B] transition-colors"
                        >
                            Get A Quote
                        </button>
                    </div>
                </div>

                <!-- Tracking Widget Mockup -->
                <div
                    class="hidden lg:block bg-white rounded-sm shadow-2xl p-8 max-w-md ml-auto border-t-4 border-[#DC2626]"
                >
                    <h3
                        class="font-titan-header font-black text-2xl mb-6 text-[#00205B]"
                    >
                        QUICK TRACK
                    </h3>
                    <div class="space-y-4">
                        <div>
                            <label
                                class="block font-titan-header font-bold text-xs uppercase text-gray-500 mb-1"
                                >Tracking Number</label
                            >
                            <div class="flex">
                                <input
                                    type="text"
                                    placeholder="NSL-8842-X9"
                                    class="w-full bg-gray-100 border border-gray-300 p-3 font-mono text-sm focus:outline-none focus:border-[#00205B]"
                                />
                                <button
                                    class="bg-[#00205B] text-white px-4 flex items-center justify-center hover:bg-blue-900"
                                >
                                    <ArrowRight class="w-5 h-5" />
                                </button>
                            </div>
                        </div>
                        <div class="pt-4 border-t border-gray-100">
                            <div class="flex items-center justify-between mb-2">
                                <span
                                    class="font-titan-header font-bold text-sm"
                                    >NSL-9921-A4</span
                                >
                                <span
                                    class="text-[#DC2626] font-bold text-xs uppercase"
                                    >In Transit</span
                                >
                            </div>
                            <div
                                class="w-full bg-gray-200 h-2 rounded-full overflow-hidden"
                            >
                                <div class="bg-[#00205B] h-full w-3/4"></div>
                            </div>
                            <div
                                class="flex justify-between text-xs text-gray-500 mt-1 font-titan-body"
                            >
                                <span>Shenzhen</span>
                                <span>Los Angeles</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- MARQUEE -->
        <div
            class="bg-[#00205B] text-white py-4 overflow-hidden border-t border-white/10"
        >
            <div
                class="animate-[marquee_30s_linear_infinite] whitespace-nowrap font-titan-header font-black text-2xl uppercase tracking-widest flex items-center gap-12 opacity-80"
            >
                <span>Air Freight</span>
                <span class="text-[#DC2626]">•</span>
                <span>Ocean Cargo</span>
                <span class="text-[#DC2626]">•</span>
                <span>Last Mile</span>
                <span class="text-[#DC2626]">•</span>
                <span>Cold Chain</span>
                <span class="text-[#DC2626]">•</span>
                <span>Warehousing</span>
                <span class="text-[#DC2626]">•</span>
                <span>Air Freight</span>
                <span class="text-[#DC2626]">•</span>
                <span>Ocean Cargo</span>
                <span class="text-[#DC2626]">•</span>
                <span>Last Mile</span>
                <span class="text-[#DC2626]">•</span>
                <span>Cold Chain</span>
                <span class="text-[#DC2626]">•</span>
                <span>Warehousing</span>
                <span class="text-[#DC2626]">•</span>
            </div>
        </div>

        <!-- STATS / FEATURES -->
        <section class="py-24 px-6 bg-gray-50">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                    <!-- Feature 1 -->
                    <div class="group">
                        <div
                            class="w-16 h-16 bg-[#00205B] text-white flex items-center justify-center mb-6 rounded-sm group-hover:bg-[#DC2626] transition-colors"
                        >
                            <Globe class="w-8 h-8" />
                        </div>
                        <h3 class="font-titan-header font-black text-2xl mb-4">
                            GLOBAL NETWORK
                        </h3>
                        <p
                            class="font-titan-body text-gray-600 leading-relaxed mb-4"
                        >
                            Operating in 140+ countries with owned
                            infrastructure. We don't outsource your reliability.
                        </p>
                        <div
                            class="font-titan-header font-bold text-3xl text-[#00205B]"
                        >
                            140+
                        </div>
                        <div
                            class="text-xs uppercase font-bold text-gray-400 tracking-widest"
                        >
                            Countries
                        </div>
                    </div>

                    <!-- Feature 2 -->
                    <div class="group">
                        <div
                            class="w-16 h-16 bg-[#00205B] text-white flex items-center justify-center mb-6 rounded-sm group-hover:bg-[#DC2626] transition-colors"
                        >
                            <Box class="w-8 h-8" />
                        </div>
                        <h3 class="font-titan-header font-black text-2xl mb-4">
                            SMART TRACKING
                        </h3>
                        <p
                            class="font-titan-body text-gray-600 leading-relaxed mb-4"
                        >
                            Real-time GPS and IoT sensor integration for
                            temperature, humidity, and shock monitoring.
                        </p>
                        <div
                            class="font-titan-header font-bold text-3xl text-[#00205B]"
                        >
                            2M+
                        </div>
                        <div
                            class="text-xs uppercase font-bold text-gray-400 tracking-widest"
                        >
                            Tons Shipped
                        </div>
                    </div>

                    <!-- Feature 3 -->
                    <div class="group">
                        <div
                            class="w-16 h-16 bg-[#00205B] text-white flex items-center justify-center mb-6 rounded-sm group-hover:bg-[#DC2626] transition-colors"
                        >
                            <Anchor class="w-8 h-8" />
                        </div>
                        <h3 class="font-titan-header font-black text-2xl mb-4">
                            CUSTOMS CLEARANCE
                        </h3>
                        <p
                            class="font-titan-body text-gray-600 leading-relaxed mb-4"
                        >
                            Automated documentation and pre-clearance to ensure
                            zero friction at the border.
                        </p>
                        <div
                            class="font-titan-header font-bold text-3xl text-[#00205B]"
                        >
                            99.8%
                        </div>
                        <div
                            class="text-xs uppercase font-bold text-gray-400 tracking-widest"
                        >
                            On Time
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section
            class="py-24 bg-[#00205B] text-white text-center px-6 relative overflow-hidden"
        >
            <div
                class="absolute inset-0 z-0 opacity-5"
                style="background-image: linear-gradient(#fff 1px, transparent 1px), linear-gradient(90deg, #fff 1px, transparent 1px); background-size: 100px 100px;"
            >
            </div>

            <div class="relative z-10 max-w-4xl mx-auto">
                <h2
                    class="font-titan-header font-black text-5xl md:text-7xl mb-8"
                >
                    READY TO SCALE?
                </h2>
                <p
                    class="font-titan-body text-xl text-gray-300 mb-12 max-w-2xl mx-auto"
                >
                    Join the logistics network that powers the global economy.
                    Secure your supply chain today.
                </p>
                <button
                    class="bg-[#DC2626] text-white px-12 py-5 rounded-sm font-titan-header font-bold text-xl uppercase hover:bg-red-700 transition-colors shadow-xl shadow-black/30"
                >
                    Partner With North Star
                </button>
            </div>
        </section>
    </main>
</Layout>
