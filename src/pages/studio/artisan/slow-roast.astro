---
import Layout from "../../../layouts/Layout.astro";
import {
    Coffee,
    Heart,
    Sun,
    Clock,
    ArrowLeft,
    ShoppingBag,
} from "lucide-astro";
---

<Layout title="Slow Roast | The Artisan Vault">
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;1,400&family=Nunito:wght@300;400;600&display=swap");

        .font-serif-artisan {
            font-family: "Lora", serif;
        }
        .font-sans-artisan {
            font-family: "Nunito", sans-serif;
        }

        .grain-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 50;
            opacity: 0.05;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
        }
    </style>

    <div class="grain-overlay"></div>

    <main
        class="bg-[#fff9f0] text-[#5c4033] min-h-screen selection:bg-[#d97706] selection:text-white relative"
    >
        <!-- Navigation -->
        <nav
            class="absolute top-0 left-0 w-full p-6 z-50 flex justify-between items-center"
        >
            <a
                href="/studio/artisan"
                class="flex items-center gap-2 font-sans-artisan text-sm uppercase tracking-widest hover:text-[#d97706] transition-colors"
            >
                <ArrowLeft class="w-4 h-4" /> Back to Vault
            </a>
            <div class="font-serif-artisan italic text-xl">Slow Roast</div>
            <div class="relative">
                <ShoppingBag
                    class="w-6 h-6 hover:text-[#d97706] transition-colors cursor-pointer"
                />
                <div
                    class="absolute -top-1 -right-1 w-4 h-4 bg-[#d97706] rounded-full text-white text-[10px] flex items-center justify-center font-bold"
                >
                    2
                </div>
            </div>
        </nav>

        <!-- HERO SECTION -->
        <section
            class="min-h-screen flex flex-col justify-center items-center p-6 relative"
        >
            <div class="max-w-4xl mx-auto text-center relative z-10">
                <div
                    class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-[#5c4033] text-[#fff9f0] mb-8"
                >
                    <Coffee class="w-8 h-8" />
                </div>

                <h1
                    class="font-serif-artisan text-6xl md:text-8xl mb-6 text-[#3e2723]"
                >
                    Mornings,<br />Reclaimed.
                </h1>

                <div
                    class="relative w-full max-w-2xl mx-auto aspect-video mb-12 rounded-lg overflow-hidden shadow-2xl shadow-[#5c4033]/20 rotate-1 hover:rotate-0 transition-transform duration-700"
                >
                    <img
                        src="/images/artisan-hero.png"
                        alt="Pour over coffee"
                        class="w-full h-full object-cover"
                    />
                    <div
                        class="absolute inset-0 bg-[#5c4033]/10 mix-blend-multiply"
                    >
                    </div>
                </div>

                <p
                    class="font-sans-artisan text-lg md:text-xl leading-relaxed max-w-2xl mx-auto mb-12 text-[#795548]"
                >
                    We don't automate our roast. We listen to the beans. Small
                    batch coffee for people who sit down to drink it.
                </p>

                <button
                    class="bg-[#d97706] text-white px-8 py-3 rounded-full font-sans-artisan font-semibold hover:bg-[#b45309] transition-colors shadow-lg shadow-orange-900/10"
                >
                    Shop The Roast
                </button>
            </div>
        </section>

        <!-- FEATURES -->
        <section class="py-24 px-6 bg-white/50">
            <div
                class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8"
            >
                <div
                    class="bg-white p-8 rounded-2xl border border-[#5c4033]/10 text-center hover:border-[#d97706]/30 transition-colors"
                >
                    <Heart class="w-8 h-8 mx-auto mb-4 text-[#d97706]" />
                    <h3 class="font-serif-artisan text-xl font-semibold mb-2">
                        Fair Trade
                    </h3>
                    <p class="font-sans-artisan text-sm opacity-70">
                        Farmers first. Always.
                    </p>
                </div>
                <div
                    class="bg-white p-8 rounded-2xl border border-[#5c4033]/10 text-center hover:border-[#d97706]/30 transition-colors"
                >
                    <Clock class="w-8 h-8 mx-auto mb-4 text-[#d97706]" />
                    <h3 class="font-serif-artisan text-xl font-semibold mb-2">
                        Small Batch
                    </h3>
                    <p class="font-sans-artisan text-sm opacity-70">
                        Roasted every Tuesday.
                    </p>
                </div>
                <div
                    class="bg-white p-8 rounded-2xl border border-[#5c4033]/10 text-center hover:border-[#d97706]/30 transition-colors"
                >
                    <Sun class="w-8 h-8 mx-auto mb-4 text-[#d97706]" />
                    <h3 class="font-serif-artisan text-xl font-semibold mb-2">
                        Perfect Grind
                    </h3>
                    <p class="font-sans-artisan text-sm opacity-70">
                        Consistent every time.
                    </p>
                </div>
            </div>
        </section>

        <!-- MARQUEE -->
        <div
            class="w-full overflow-hidden py-6 border-t border-b border-[#5c4033]/10 bg-[#fff9f0]"
        >
            <div
                class="animate-[marquee_40s_linear_infinite] whitespace-nowrap font-serif-artisan italic text-xl text-[#8d6e63]"
            >
                ETHIOPIA YIRGACHEFFE ~ COLOMBIA HUILA ~ GUATEMALA ANTIGUA ~
                BRAZIL SANTOS ~ ETHIOPIA YIRGACHEFFE ~ COLOMBIA HUILA ~
                GUATEMALA ANTIGUA ~ BRAZIL SANTOS
            </div>
        </div>
    </main>
</Layout>
