---
import Layout from "../../layouts/Layout.astro";
import {
    Building2,
    TrendingUp,
    Shield,
    ArrowRight,
    ArrowDown,
    Type,
    Palette,
} from "lucide-astro";
---

<Layout title="The Titan | Aesthetic Vault">
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&family=Open+Sans:wght@400;600&display=swap");

        .font-titan-header {
            font-family: "Roboto", sans-serif;
        }
        .font-titan-body {
            font-family: "Open Sans", sans-serif;
        }
    </style>

    <main
        class="bg-gray-50 text-[#00205B] min-h-screen selection:bg-[#00205B] selection:text-white"
    >
        <!-- HERO SECTION -->
        <section
            class="relative h-screen w-full flex items-center justify-center overflow-hidden bg-[#00205B]"
        >
            <!-- Background Image -->
            <div class="absolute inset-0 z-0">
                <img
                    src="/images/titan-hero.png"
                    alt="Corporate Skyscraper"
                    class="w-full h-full object-cover opacity-60"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-[#00205B] via-transparent to-transparent"
                >
                </div>
            </div>

            <!-- Grid Overlay -->
            <div
                class="absolute inset-0 z-0 opacity-10"
                style="background-image: linear-gradient(#fff 1px, transparent 1px), linear-gradient(90deg, #fff 1px, transparent 1px); background-size: 50px 50px;"
            >
            </div>

            <!-- Content -->
            <div
                class="relative z-10 text-center text-white p-6 max-w-5xl mx-auto"
            >
                <div
                    class="inline-block border-2 border-white px-4 py-2 text-sm font-titan-header font-bold tracking-widest uppercase mb-8"
                >
                    Aesthetic Vault No. 03
                </div>
                <h1
                    class="font-titan-header font-black text-7xl md:text-9xl mb-6 tracking-tight drop-shadow-2xl"
                >
                    THE TITAN
                </h1>
                <p
                    class="font-titan-body text-xl md:text-2xl font-normal tracking-wide text-gray-200 max-w-3xl mx-auto mb-12"
                >
                    Corporate. Trustworthy. Scalable. <br />
                    For institutions that move the world and cannot afford to fail.
                </p>

                <a
                    href="#showcase"
                    class="inline-flex flex-col items-center gap-2 text-white hover:text-[#DC2626] transition-colors animate-bounce"
                >
                    <span
                        class="text-xs font-titan-header font-bold uppercase tracking-widest"
                        >Inspect Designs</span
                    >
                    <ArrowDown class="w-6 h-6" />
                </a>
            </div>
        </section>

        <!-- VIBE DNA -->
        <section class="py-20 px-6 border-b border-gray-200 bg-white">
            <div
                class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12"
            >
                <div class="md:col-span-1">
                    <h2
                        class="font-titan-header font-black text-4xl mb-4 text-[#00205B]"
                    >
                        VIBE DNA
                    </h2>
                    <p
                        class="font-titan-body text-lg text-gray-600 leading-relaxed"
                    >
                        This aesthetic uses bold Swiss-style typography, solid
                        color blocks, and rigid grids. It evokes stability,
                        global reach, and "too big to fail" security.
                    </p>
                </div>
                <div
                    class="md:col-span-2 grid grid-cols-1 sm:grid-cols-2 gap-8"
                >
                    <!-- Typography -->
                    <div class="bg-gray-50 p-8 border-l-4 border-[#00205B]">
                        <div
                            class="flex items-center gap-3 mb-6 text-[#00205B]"
                        >
                            <Type class="w-6 h-6" />
                            <span
                                class="font-titan-header font-bold text-xs uppercase tracking-widest"
                                >Typography</span
                            >
                        </div>
                        <div class="space-y-6">
                            <div>
                                <span
                                    class="font-titan-header font-black text-5xl"
                                    >Roboto</span
                                >
                                <p
                                    class="text-xs font-bold uppercase text-gray-400 mt-2"
                                >
                                    Primary Header (Black/Heavy)
                                </p>
                            </div>
                            <div>
                                <span class="font-titan-body text-2xl"
                                    >Open Sans</span
                                >
                                <p
                                    class="text-xs font-bold uppercase text-gray-400 mt-2"
                                >
                                    Body Text
                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- Palette -->
                    <div class="bg-gray-50 p-8 border-l-4 border-[#DC2626]">
                        <div
                            class="flex items-center gap-3 mb-6 text-[#DC2626]"
                        >
                            <Palette class="w-6 h-6" />
                            <span
                                class="font-titan-header font-bold text-xs uppercase tracking-widest"
                                >Palette</span
                            >
                        </div>
                        <div class="flex gap-6">
                            <div class="text-center">
                                <div
                                    class="w-16 h-16 bg-[#00205B] mb-3 shadow-lg"
                                >
                                </div>
                                <span
                                    class="text-xs font-mono font-bold text-gray-500"
                                    >#00205B</span
                                >
                                <span
                                    class="block text-[10px] uppercase text-gray-400"
                                    >Navy</span
                                >
                            </div>
                            <div class="text-center">
                                <div
                                    class="w-16 h-16 bg-[#E5E7EB] mb-3 shadow-sm border border-gray-200"
                                >
                                </div>
                                <span
                                    class="text-xs font-mono font-bold text-gray-500"
                                    >#E5E7EB</span
                                >
                                <span
                                    class="block text-[10px] uppercase text-gray-400"
                                    >Grey</span
                                >
                            </div>
                            <div class="text-center">
                                <div
                                    class="w-16 h-16 bg-[#DC2626] mb-3 shadow-lg"
                                >
                                </div>
                                <span
                                    class="text-xs font-mono font-bold text-gray-500"
                                    >#DC2626</span
                                >
                                <span
                                    class="block text-[10px] uppercase text-gray-400"
                                    >Signal Red</span
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SHOWCASE: NORTH STAR -->
        <section id="showcase" class="py-32 px-6 relative bg-gray-100">
            <div class="max-w-7xl mx-auto">
                <div
                    class="flex flex-col md:flex-row items-center justify-between mb-16"
                >
                    <div>
                        <span
                            class="font-titan-header text-[#DC2626] tracking-widest text-sm uppercase font-bold"
                            >Design Sample 01</span
                        >
                        <h2
                            class="font-titan-header font-black text-5xl md:text-6xl mt-2 text-[#00205B]"
                        >
                            NORTH STAR
                        </h2>
                    </div>
                    <div class="mt-6 md:mt-0 max-w-md text-right md:text-left">
                        <p class="font-titan-body text-lg text-gray-600">
                            A logistics and supply chain interface. Focus on
                            movement, scale, and global infrastructure.
                        </p>
                    </div>
                </div>

                <!-- Mockup Container -->
                <a
                    href="/studio/titan/north-star"
                    class="block bg-white rounded-sm shadow-2xl overflow-hidden border border-gray-200 hover:shadow-3xl hover:-translate-y-1 transition-all duration-300 group"
                >
                    <!-- Mock Browser Header -->
                    <div class="bg-[#00205B] px-4 py-3 flex items-center gap-2">
                        <div class="w-3 h-3 rounded-full bg-red-500"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                        <div class="w-3 h-3 rounded-full bg-green-500"></div>
                        <div
                            class="ml-4 bg-[#00153a] px-3 py-1 rounded-sm text-xs text-gray-300 flex-grow max-w-md text-center font-mono group-hover:text-white transition-colors"
                        >
                            northstar.logistics
                        </div>
                    </div>

                    <!-- Live Preview Area -->
                    <div
                        class="relative h-[600px] bg-[#00205B] overflow-hidden"
                    >
                        <!-- Background Image -->
                        <div class="absolute inset-0 z-0 opacity-50">
                            <img
                                src="/images/north-star-hero.png"
                                alt="Global Logistics"
                                class="w-full h-full object-cover"
                            />
                        </div>

                        <!-- Content Overlay -->
                        <div
                            class="absolute inset-0 z-10 flex items-center justify-center p-12"
                        >
                            <div class="text-center text-white max-w-3xl">
                                <div
                                    class="inline-flex items-center gap-2 border border-white/30 px-3 py-1 rounded-sm text-xs font-titan-header font-bold uppercase tracking-widest mb-8 bg-white/10 backdrop-blur-sm"
                                >
                                    <span
                                        class="w-2 h-2 bg-[#DC2626] rounded-full"
                                    ></span>
                                    System Operational
                                </div>
                                <h1
                                    class="font-titan-header font-black text-6xl md:text-8xl mb-6 leading-none tracking-tight"
                                >
                                    MOVING<br />THE WORLD.
                                </h1>
                                <button
                                    class="mt-8 bg-[#DC2626] text-white px-8 py-4 rounded-sm font-titan-header font-bold text-lg uppercase hover:bg-red-700 transition-colors inline-flex items-center gap-2 group-hover:scale-105 duration-300"
                                >
                                    Enter Site <ArrowRight class="w-5 h-5" />
                                </button>
                            </div>
                        </div>

                        <!-- Hover Overlay -->
                        <div
                            class="absolute inset-0 bg-[#00205B]/80 opacity-0 group-hover:opacity-20 transition-opacity duration-300 z-20"
                        >
                        </div>
                    </div>

                    <!-- Feature Strip -->
                    <div
                        class="bg-white p-8 grid grid-cols-1 md:grid-cols-3 gap-8 border-t-4 border-[#DC2626]"
                    >
                        <div class="flex items-center gap-4">
                            <div
                                class="bg-gray-100 p-3 rounded-sm text-[#00205B]"
                            >
                                <Building2 class="w-6 h-6" />
                            </div>
                            <div>
                                <h4
                                    class="font-titan-header font-bold text-sm uppercase"
                                >
                                    Global Reach
                                </h4>
                                <p class="text-xs text-gray-500">
                                    140+ Countries
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div
                                class="bg-gray-100 p-3 rounded-sm text-[#00205B]"
                            >
                                <TrendingUp class="w-6 h-6" />
                            </div>
                            <div>
                                <h4
                                    class="font-titan-header font-bold text-sm uppercase"
                                >
                                    Efficiency
                                </h4>
                                <p class="text-xs text-gray-500">
                                    99.8% On Time
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div
                                class="bg-gray-100 p-3 rounded-sm text-[#00205B]"
                            >
                                <Shield class="w-6 h-6" />
                            </div>
                            <div>
                                <h4
                                    class="font-titan-header font-bold text-sm uppercase"
                                >
                                    Security
                                </h4>
                                <p class="text-xs text-gray-500">
                                    End-to-end Encrypted
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </section>

        <!-- SHOWCASE: APEX CAPITAL -->
        <section class="py-32 px-6 relative bg-white border-t border-gray-200">
            <div class="max-w-7xl mx-auto">
                <div
                    class="flex flex-col md:flex-row items-center justify-between mb-16"
                >
                    <div>
                        <span
                            class="font-titan-header text-[#00205B] tracking-widest text-sm uppercase font-bold"
                            >Design Sample 02</span
                        >
                        <h2
                            class="font-titan-header font-black text-5xl md:text-6xl mt-2 text-[#00205B]"
                        >
                            APEX CAPITAL
                        </h2>
                    </div>
                    <div class="mt-6 md:mt-0 max-w-md text-right md:text-left">
                        <p class="font-titan-body text-lg text-gray-600">
                            A fintech and wealth management interface. Focus on
                            stability, growth, and transparency.
                        </p>
                    </div>
                </div>

                <!-- Mockup Container -->
                <a
                    href="/studio/titan/apex-capital"
                    class="block bg-gray-50 rounded-sm shadow-2xl overflow-hidden border border-gray-200 hover:shadow-3xl hover:-translate-y-1 transition-all duration-300 group"
                >
                    <!-- Mock Browser Header -->
                    <div class="bg-[#00205B] px-4 py-3 flex items-center gap-2">
                        <div class="w-3 h-3 rounded-full bg-red-500"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                        <div class="w-3 h-3 rounded-full bg-green-500"></div>
                        <div
                            class="ml-4 bg-[#00153a] px-3 py-1 rounded-sm text-xs text-gray-300 flex-grow max-w-md text-center font-mono group-hover:text-white transition-colors"
                        >
                            apex.capital
                        </div>
                    </div>

                    <!-- Live Preview Area -->
                    <div
                        class="relative h-[600px] bg-[#00205B] overflow-hidden"
                    >
                        <!-- Background Image -->
                        <div class="absolute inset-0 z-0 opacity-50">
                            <img
                                src="/images/apex-hero.png"
                                alt="Modern Architecture"
                                class="w-full h-full object-cover"
                            />
                        </div>
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-[#00205B] via-[#00205B]/60 to-transparent"
                        >
                        </div>

                        <!-- Content Overlay -->
                        <div
                            class="absolute inset-0 z-10 flex items-center justify-center p-12"
                        >
                            <div class="text-center text-white max-w-3xl">
                                <h1
                                    class="font-titan-header font-black text-6xl md:text-8xl mb-6 leading-none tracking-tight"
                                >
                                    COMPOUND<br />YOUR<br />LEGACY.
                                </h1>
                                <button
                                    class="mt-8 bg-white text-[#00205B] px-8 py-4 rounded-sm font-titan-header font-bold text-lg uppercase hover:bg-gray-200 transition-colors inline-flex items-center gap-2 group-hover:scale-105 duration-300"
                                >
                                    Open Account <ArrowRight class="w-5 h-5" />
                                </button>
                            </div>
                        </div>

                        <!-- Hover Overlay -->
                        <div
                            class="absolute inset-0 bg-[#00205B]/80 opacity-0 group-hover:opacity-20 transition-opacity duration-300 z-20"
                        >
                        </div>
                    </div>

                    <!-- Feature Strip -->
                    <div
                        class="bg-white p-8 grid grid-cols-1 md:grid-cols-3 gap-8 border-t-4 border-[#00205B]"
                    >
                        <div class="flex items-center gap-4">
                            <div
                                class="bg-gray-100 p-3 rounded-sm text-[#00205B]"
                            >
                                <Shield class="w-6 h-6" />
                            </div>
                            <div>
                                <h4
                                    class="font-titan-header font-bold text-sm uppercase"
                                >
                                    Secure
                                </h4>
                                <p class="text-xs text-gray-500">
                                    Bank-Grade Encryption
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div
                                class="bg-gray-100 p-3 rounded-sm text-[#00205B]"
                            >
                                <TrendingUp class="w-6 h-6" />
                            </div>
                            <div>
                                <h4
                                    class="font-titan-header font-bold text-sm uppercase"
                                >
                                    Growth
                                </h4>
                                <p class="text-xs text-gray-500">
                                    AI-Driven Advisory
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div
                                class="bg-gray-100 p-3 rounded-sm text-[#00205B]"
                            >
                                <Building2 class="w-6 h-6" />
                            </div>
                            <div>
                                <h4
                                    class="font-titan-header font-bold text-sm uppercase"
                                >
                                    Scale
                                </h4>
                                <p class="text-xs text-gray-500">$4B+ AUM</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-24 text-center bg-[#00205B] text-white">
            <h2 class="font-titan-header font-black text-4xl md:text-5xl mb-8">
                BUILD A LEGACY.
            </h2>
            <a
                href="/contact"
                class="inline-block bg-white text-[#00205B] px-12 py-4 rounded-sm font-titan-header font-bold text-xl hover:bg-gray-200 transition-colors shadow-xl"
            >
                Start Your Project
            </a>
        </section>
    </main>
</Layout>
