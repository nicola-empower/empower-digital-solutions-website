---
import Layout from "../layouts/Layout.astro";
import {
    Check,
    Shield,
    CheckCircle,
    Server,
    Database,
    Globe,
    Zap,
    ArrowRight,
    Star,
    HelpCircle,
} from "lucide-react";

export const prerender = true;
---

<Layout
    title="Transparent Pricing | Empower Digital Solutions"
    description="Clear, fixed-price packages for trades and custom quotes for software. No hidden fees."
>
    <!-- Hero Section -->
    <section class="bg-slate-950 text-white py-24 relative overflow-hidden">
        <div
            class="absolute inset-0 bg-[url('/images/hero-bg.png')] bg-cover bg-center opacity-10"
        >
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-b from-slate-950/80 to-slate-950"
        >
        </div>

        <div class="container mx-auto px-6 relative z-10 text-center">
            <h1 class="text-5xl md:text-7xl font-bold font-heading mb-6">
                Transparent <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-green-400"
                    >Pricing</span
                >
            </h1>
            <p
                class="text-xl md:text-2xl text-slate-400 max-w-3xl mx-auto font-light"
            >
                Choose the model that fits your growth stage. <br
                    class="hidden md:block"
                />
                <span class="text-white font-bold"
                    >Fixed Packages for Websites. Flexible Estimates for Apps.</span
                >
            </p>
            <div
                class="flex flex-col md:flex-row gap-4 justify-center mt-8 text-sm font-bold"
            >
                <a
                    href="#packages"
                    class="px-8 py-3 rounded-full bg-white text-slate-950 hover:bg-blue-50 hover:scale-105 transition-all shadow-lg shadow-white/10"
                >
                    View Website Packages
                </a>
                <a
                    href="#custom"
                    class="px-8 py-3 rounded-full border border-slate-700 text-slate-300 hover:border-white hover:text-white hover:bg-white/5 transition-all backdrop-blur-sm"
                >
                    Custom Software & Automation
                </a>
            </div>
        </div>
    </section>

    <!-- SECTION 1: TRADES PACKAGES -->
    <section
        id="packages"
        class="py-24 bg-slate-900 text-white border-b border-slate-800"
    >
        <div class="container mx-auto px-6">
            <div class="text-center mb-16 max-w-4xl mx-auto">
                <div
                    class="inline-block bg-blue-900/30 text-blue-300 px-4 py-1 rounded-full text-sm font-bold mb-4 border border-blue-500/30"
                >
                    Productized Services
                </div>
                <h2 class="text-4xl md:text-5xl font-bold font-heading mb-6">
                    Website Packages
                </h2>
                <p class="text-xl text-gray-300">
                    Proven, high-performance website packages designed to
                    generate leads.
                </p>
            </div>

            <div
                class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 items-start"
            >
                <!-- Tier 0: The Launchpad -->
                <div
                    class="bg-slate-950 p-8 rounded-2xl border border-slate-800 hover:border-slate-600 transition-colors relative group"
                >
                    <h3 class="text-2xl font-bold font-heading text-white mb-2">
                        The Launchpad
                    </h3>
                    <p class="text-gray-400 text-sm mb-6">
                        Single Page Starter
                    </p>
                    <div class="text-4xl font-bold text-white mb-2">£1,295</div>
                    <div class="text-sm text-blue-400 font-bold mb-6">
                        + Optional Watchdog Plan
                    </div>
                    <p
                        class="text-gray-300 mb-8 text-sm leading-relaxed min-h-[80px]"
                    >
                        Perfect for new businesses. Get professional, get found,
                        and get paying clients. Expand later when you grow.
                    </p>
                    <ul class="space-y-4 mb-8 text-sm text-gray-300">
                        <li class="flex gap-3">
                            <Check className="w-5 h-5 text-gray-500 shrink-0" />
                            <strong>One-Page "Landing Site"</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check className="w-5 h-5 text-gray-500 shrink-0" />
                            <strong>High-Conversion Design</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check className="w-5 h-5 text-gray-500 shrink-0" />
                            <strong>Contact Form & Map</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check className="w-5 h-5 text-gray-500 shrink-0" />
                            <strong>Mobile Optimised</strong>
                        </li>
                        <li class="flex gap-3">
                            <div
                                class="w-5 h-5 flex items-center justify-center shrink-0 text-gray-500 font-bold"
                            >
                                !
                            </div>
                            <span class="text-gray-400"
                                >Updates: £100/hr (Ad-hoc)</span
                            >
                        </li>
                    </ul>
                    <a
                        href="/contact?package=launchpad"
                        class="block w-full py-4 text-center border border-slate-700 text-gray-300 font-bold rounded-lg hover:bg-white hover:text-black transition-colors"
                        >Start Small</a
                    >
                </div>

                <!-- Tier 1 -->
                <div
                    class="bg-slate-950 p-8 rounded-2xl border border-slate-800 hover:border-blue-400 transition-colors relative group"
                >
                    <h3 class="text-2xl font-bold font-heading text-white mb-2">
                        The Brand Authority
                    </h3>
                    <p class="text-gray-400 text-sm mb-6">
                        Static Site Architecture
                    </p>
                    <div class="text-4xl font-bold text-white mb-2">£2,495</div>
                    <div class="text-sm text-blue-400 font-bold mb-6">
                        + Optional Watchdog Plan
                    </div>
                    <p
                        class="text-gray-300 mb-8 text-sm leading-relaxed min-h-[80px]"
                    >
                        Stop losing leads to competitors who look more
                        professional. A high-performance marketing site that
                        ranks high and loads instantly.
                    </p>
                    <ul class="space-y-4 mb-8 text-sm text-gray-300">
                        <li class="flex gap-3">
                            <Check
                                className="w-5 h-5 text-green-400 shrink-0"
                            />
                            <strong>Astro/React Architecture</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check className="w-5 h-5 text-blue-500 shrink-0" />
                            <strong>5-Page Custom Build</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check className="w-5 h-5 text-blue-500 shrink-0" />
                            <strong>Professional Copywriting</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check className="w-5 h-5 text-blue-500 shrink-0" />
                            <strong>Trust Badges & Reviews</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check className="w-5 h-5 text-blue-500 shrink-0" />
                            <strong>Local SEO Schema</strong>
                        </li>
                    </ul>
                    <a
                        href="/contact?package=brand-authority"
                        class="block w-full py-4 text-center border border-white text-white font-bold rounded-lg hover:bg-white hover:text-black transition-colors"
                        >Select Package</a
                    >
                </div>

                <!-- Tier 2 -->
                <div
                    class="bg-slate-950 p-8 rounded-2xl border border-slate-800 hover:border-purple-400 transition-colors relative group"
                >
                    <h3 class="text-2xl font-bold font-heading text-white mb-2">
                        The Operations Engine
                    </h3>
                    <p class="text-purple-400 text-sm mb-6">Custom Web App</p>
                    <div class="text-4xl font-bold text-white mb-2">£3,495</div>
                    <div class="text-sm text-blue-400 font-bold mb-6">
                        + Optional Watchdog Plan
                    </div>
                    <p
                        class="text-gray-300 mb-8 text-sm leading-relaxed min-h-[80px]"
                    >
                        Your personal digital office manager. Automate the
                        boring stuff so you can get off the tools and get your
                        weekends back.
                    </p>
                    <ul class="space-y-4 mb-8 text-sm text-gray-300">
                        <li class="flex gap-3">
                            <Check
                                className="w-5 h-5 text-purple-500 shrink-0"
                            />
                            <strong>Custom Ruby/Node Backend</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check
                                className="w-5 h-5 text-purple-500 shrink-0"
                            />
                            <strong>"Quote Command" Dashboard</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check
                                className="w-5 h-5 text-purple-500 shrink-0"
                            />
                            <strong>Job Scheduling Board</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check
                                className="w-5 h-5 text-purple-500 shrink-0"
                            />
                            <strong>Client Portal</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check
                                className="w-5 h-5 text-purple-500 shrink-0"
                            />
                            <strong>Mobile Admin Web-App</strong>
                        </li>
                    </ul>
                    <a
                        href="/contact?package=ops-engine"
                        class="block w-full py-4 text-center border border-purple-500 text-purple-400 font-bold rounded-lg hover:bg-purple-500 hover:text-white transition-colors"
                        >Select Package</a
                    >
                </div>

                <!-- Tier 3 -->
                <div
                    class="bg-slate-800 p-8 rounded-2xl border-2 border-green-500 relative shadow-2xl scale-105 z-10"
                >
                    <div
                        class="absolute top-0 right-0 bg-green-500 text-black text-xs font-bold px-3 py-1 rounded-bl-lg rounded-tr-lg"
                    >
                        BEST VALUE
                    </div>
                    <h3 class="text-2xl font-bold font-heading text-white mb-2">
                        The Full Ecosystem
                    </h3>
                    <p class="text-green-400 text-sm mb-6">
                        Hybrid Build (Flagship)
                    </p>
                    <div class="text-4xl font-bold text-white mb-2">£4,995</div>
                    <div class="text-sm text-blue-400 font-bold mb-6">
                        + Optional Watchdog Plan
                    </div>
                    <p
                        class="text-gray-300 mb-8 text-sm leading-relaxed min-h-[80px]"
                    >
                        The complete digital transformation. A lead-generating
                        front end perfectly synced with an automated back end.
                    </p>
                    <ul class="space-y-4 mb-8 text-sm text-gray-300">
                        <li class="flex gap-3">
                            <Check
                                className="w-5 h-5 text-green-400 shrink-0"
                            />
                            <strong>EVERYTHING in Tier 1 + Tier 2</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check
                                className="w-5 h-5 text-green-400 shrink-0"
                            />
                            <strong>Seamless Data Integration</strong>
                        </li>
                        <li class="flex gap-3">
                            <Check
                                className="w-5 h-5 text-green-400 shrink-0"
                            />
                            <strong>Smart Customer Estimator Tool</strong>
                        </li>
                        <li class="pt-4 mt-4 border-t border-slate-700">
                            <div
                                class="flex gap-2 items-center text-green-400 font-bold text-sm"
                            >
                                <Star className="w-4 h-4 fill-green-400" /> Priority
                                Support
                            </div>
                        </li>
                    </ul>
                    <a
                        href="/contact?package=full-ecosystem"
                        class="block w-full py-4 text-center bg-green-500 text-black font-bold rounded-lg hover:bg-green-400 transition-colors shadow-lg shadow-green-900/50"
                        >Start Your Build</a
                    >
                </div>
            </div>
            <!-- Comparison Table (Desktop) -->
            <div class="mt-24 hidden md:block overflow-x-auto">
                <table class="w-full text-left border-collapse min-w-[800px]">
                    <thead>
                        <tr
                            class="border-b border-slate-800 text-gray-400 text-sm"
                        >
                            <th class="p-4 w-1/4">Feature</th>
                            <th class="p-4 w-1/6 text-center text-white"
                                >Launchpad</th
                            >
                            <th class="p-4 w-1/6 text-center text-blue-400"
                                >Brand Authority</th
                            >
                            <th class="p-4 w-1/6 text-center text-purple-400"
                                >Ops Engine</th
                            >
                            <th class="p-4 w-1/6 text-center text-green-400"
                                >Ecosystem</th
                            >
                        </tr>
                    </thead>
                    <tbody class="text-sm text-gray-300">
                        <tr
                            class="border-b border-slate-800 hover:bg-slate-800/50"
                        >
                            <td class="p-4 font-bold text-white">Best For</td>
                            <td class="p-4 text-center">New Businesses</td>
                            <td class="p-4 text-center">Trades / Service</td>
                            <td class="p-4 text-center">Growing Teams</td>
                            <td class="p-4 text-center">Scale Ups</td>
                        </tr>
                        <tr
                            class="border-b border-slate-800 hover:bg-slate-800/50"
                        >
                            <td class="p-4 font-bold text-white">Pages</td>
                            <td class="p-4 text-center">1 Page</td>
                            <td class="p-4 text-center">5 Pages</td>
                            <td class="p-4 text-center">5 Pages + Portal</td>
                            <td class="p-4 text-center">Reference Site</td>
                        </tr>
                        <tr
                            class="border-b border-slate-800 hover:bg-slate-800/50"
                        >
                            <td class="p-4 font-bold text-white">Design</td>
                            <td class="p-4 text-center">High Conversion</td>
                            <td class="p-4 text-center">Premium Custom</td>
                            <td class="p-4 text-center">Premium Custom</td>
                            <td class="p-4 text-center">Hybrid</td>
                        </tr>
                        <tr
                            class="border-b border-slate-800 hover:bg-slate-800/50"
                        >
                            <td class="p-4 font-bold text-white"
                                >Architecture</td
                            >
                            <td class="p-4 text-center">Static (Fast)</td>
                            <td class="p-4 text-center">Static (Fast)</td>
                            <td class="p-4 text-center">Web App</td>
                            <td class="p-4 text-center">Hybrid</td>
                        </tr>
                        <tr
                            class="border-b border-slate-800 hover:bg-slate-800/50"
                        >
                            <td class="p-4 font-bold text-white">Turnaround</td>
                            <td class="p-4 text-center">1 Week</td>
                            <td class="p-4 text-center">2-3 Weeks</td>
                            <td class="p-4 text-center">4-6 Weeks</td>
                            <td class="p-4 text-center">8+ Weeks</td>
                        </tr>
                        <tr
                            class="border-b border-slate-800 hover:bg-slate-800/50"
                        >
                            <td class="p-4 font-bold text-white"
                                >Changes Included</td
                            >
                            <td class="p-4 text-center text-red-400"
                                >Pay As You Go</td
                            >
                            <td class="p-4 text-center text-green-400"
                                >1hr / Month</td
                            >
                            <td class="p-4 text-center text-green-400"
                                >1hr / Month</td
                            >
                            <td class="p-4 text-center text-green-400"
                                >Priority</td
                            >
                        </tr>
                    </tbody>
                </table>
                <p class="text-center text-gray-500 text-sm mt-6">
                    * Final quote confirmed after a quick call. No hidden
                    extras.
                </p>
            </div>

            <!-- Comparison List (Mobile) -->
            <div class="mt-16 md:hidden space-y-8">
                <h3
                    class="text-2xl font-bold font-heading text-center text-white mb-6"
                >
                    Key Differences
                </h3>

                <div
                    class="bg-slate-900 p-6 rounded-xl border border-slate-800"
                >
                    <h4
                        class="text-indigo-400 font-bold mb-4 flex items-center gap-2"
                    >
                        <Globe className="w-4 h-4" /> Architecture
                    </h4>
                    <ul class="space-y-3 text-sm">
                        <li
                            class="flex justify-between items-center border-b border-slate-800 pb-2"
                        >
                            <span class="text-gray-400">Launchpad</span>
                            <span class="text-white">Static (Fast)</span>
                        </li>
                        <li
                            class="flex justify-between items-center border-b border-slate-800 pb-2"
                        >
                            <span class="text-gray-400">Brand Auth</span>
                            <span class="text-white">Static (Fast)</span>
                        </li>
                        <li
                            class="flex justify-between items-center border-b border-slate-800 pb-2"
                        >
                            <span class="text-gray-400">Ops Engine</span>
                            <span class="text-white">Web App</span>
                        </li>
                    </ul>
                </div>

                <div
                    class="bg-slate-900 p-6 rounded-xl border border-slate-800"
                >
                    <h4
                        class="text-green-400 font-bold mb-4 flex items-center gap-2"
                    >
                        <Zap className="w-4 h-4" /> Turnaround
                    </h4>
                    <ul class="space-y-3 text-sm">
                        <li
                            class="flex justify-between items-center border-b border-slate-800 pb-2"
                        >
                            <span class="text-gray-400">Launchpad</span>
                            <span class="text-white">1 Week</span>
                        </li>
                        <li
                            class="flex justify-between items-center border-b border-slate-800 pb-2"
                        >
                            <span class="text-gray-400">Brand Auth</span>
                            <span class="text-white">2-3 Weeks</span>
                        </li>
                        <li
                            class="flex justify-between items-center border-b border-slate-800 pb-2"
                        >
                            <span class="text-gray-400">Ops Engine</span>
                            <span class="text-white">4-6 Weeks</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- SECTION 2: CUSTOM DEVELOPMENT -->
    <section id="custom" class="py-24 bg-slate-950 text-white">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16 max-w-4xl mx-auto">
                <div
                    class="inline-block bg-purple-900/30 text-purple-300 px-4 py-1 rounded-full text-sm font-bold mb-4 border border-purple-500/30"
                >
                    Bespoke Engineering
                </div>
                <h2 class="text-4xl md:text-5xl font-bold font-heading mb-6">
                    Custom Software & Automation
                </h2>
                <div
                    class="bg-slate-900 border border-slate-700 p-6 rounded-xl text-left max-w-3xl mx-auto mb-12 shadow-lg relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 right-0 w-32 h-32 bg-purple-500/10 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2 pointer-events-none"
                    >
                    </div>
                    <h4
                        class="text-xl font-bold text-white mb-2 flex items-center gap-2"
                    >
                        <Shield className="w-5 h-5 text-purple-400" /> Transparency
                        First: How we quote
                    </h4>
                    <p class="text-gray-400 text-sm leading-relaxed">
                        Software is complex. To give you an accurate price, we
                        often start with a
                        <strong class="text-white"
                            >paid Discovery Workshop (£300-£500)</strong
                        >. This produces a full technical blueprint. If you
                        proceed with the build, this fee is <strong
                            class="text-white"
                            >deducted from your final quote</strong
                        >.
                        <br /><br />
                        The ranges below are rough estimates based on typical complexity.
                    </p>
                </div>
            </div>

            <div
                class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto"
            >
                <!-- Tier 1: Internal Tool -->
                <div
                    class="p-8 rounded-xl bg-slate-900 shadow-xl border border-slate-800 flex flex-col"
                >
                    <div class="mb-6">
                        <h4 class="text-xl font-bold text-white mb-2">
                            The Internal Tool
                        </h4>
                        <p class="text-sm text-gray-400 mb-4">
                            Perfect for replacing that complex Excel sheet.
                        </p>
                        <div class="text-3xl font-extrabold text-empower-pink">
                            £2,500 - £4,500
                        </div>
                        <div class="text-sm text-gray-500 mt-1">
                            Approx. 2 Weeks
                        </div>
                    </div>

                    <ul class="space-y-3 mb-8 flex-1">
                        <li
                            class="flex items-start gap-3 text-gray-300 text-sm"
                        >
                            <CheckCircle
                                className="w-5 h-5 text-empower-pink shrink-0"
                            />
                            <span>Dashboards & Reporting</span>
                        </li>
                        <li
                            class="flex items-start gap-3 text-gray-300 text-sm"
                        >
                            <CheckCircle
                                className="w-5 h-5 text-empower-pink shrink-0"
                            />
                            <span>Task Trackers</span>
                        </li>
                        <li
                            class="flex items-start gap-3 text-gray-300 text-sm"
                        >
                            <CheckCircle
                                className="w-5 h-5 text-empower-pink shrink-0"
                            />
                            <span>Forms & Surveys</span>
                        </li>
                    </ul>
                </div>

                <!-- Tier 2: Business System -->
                <div
                    class="p-8 rounded-xl bg-slate-900 shadow-xl border-2 border-empower-pink flex flex-col relative"
                >
                    <div
                        class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-empower-pink text-white px-4 py-1 rounded-full text-sm font-bold shadow-lg"
                    >
                        Most Popular (SaaS)
                    </div>
                    <div class="mb-6">
                        <h4 class="text-xl font-bold text-white mb-2">
                            The Business System
                        </h4>
                        <p class="text-sm text-gray-400 mb-4">
                            A dedicated app to run a core part of your business.
                        </p>
                        <div class="text-3xl font-extrabold text-white">
                            £6,000 - £9,500
                        </div>
                        <div class="text-sm text-gray-500 mt-1">
                            Approx. 4-6 Weeks
                        </div>
                    </div>

                    <ul class="space-y-3 mb-8 flex-1">
                        <li
                            class="flex items-start gap-3 text-gray-300 text-sm"
                        >
                            <CheckCircle
                                className="w-5 h-5 text-empower-pink shrink-0"
                            />
                            <span>Admin Panels & CRMs</span>
                        </li>
                        <li
                            class="flex items-start gap-3 text-gray-300 text-sm"
                        >
                            <CheckCircle
                                className="w-5 h-5 text-empower-pink shrink-0"
                            />
                            <span>Booking Systems</span>
                        </li>
                        <li
                            class="flex items-start gap-3 text-gray-300 text-sm"
                        >
                            <CheckCircle
                                className="w-5 h-5 text-empower-pink shrink-0"
                            />
                            <span>Inventory Management</span>
                        </li>
                    </ul>
                </div>

                <!-- Tier 3: Platform -->
                <div
                    class="p-8 rounded-xl bg-slate-900 shadow-xl border border-slate-800 flex flex-col"
                >
                    <div class="mb-6">
                        <h4 class="text-xl font-bold text-white mb-2">
                            The Platform / SaaS
                        </h4>
                        <p class="text-sm text-gray-400 mb-4">
                            A scalable product ready for market launch.
                        </p>
                        <div class="text-3xl font-extrabold text-empower-pink">
                            From £12,000+
                        </div>
                        <div class="text-sm text-gray-500 mt-1">
                            Approx. 8-10 Weeks
                        </div>
                    </div>

                    <ul class="space-y-3 mb-8 flex-1">
                        <li
                            class="flex items-start gap-3 text-gray-300 text-sm"
                        >
                            <CheckCircle
                                className="w-5 h-5 text-empower-pink shrink-0"
                            />
                            <span>Multi-tenant SaaS</span>
                        </li>
                        <li
                            class="flex items-start gap-3 text-gray-300 text-sm"
                        >
                            <CheckCircle
                                className="w-5 h-5 text-empower-pink shrink-0"
                            />
                            <span>Mobile Apps (iOS/Android)</span>
                        </li>
                        <li
                            class="flex items-start gap-3 text-gray-300 text-sm"
                        >
                            <CheckCircle
                                className="w-5 h-5 text-empower-pink shrink-0"
                            />
                            <span>Complex API Integrations</span>
