---
import Layout from "../layouts/Layout.astro";

import StickyBanner from "../components/StickyBanner";
import ProjectCard from "../components/ProjectCard.astro";
import {
  BoxSelect,
  LayoutTemplate,
  Activity,
  Lightbulb,
  Smartphone,
  Globe, // Fallback for Wordpress
  SearchCode,
  Wrench,
  ShieldCheck,
  ArrowRight,
  Rocket,
  Palette,
  Atom,
  FileCode,
  Server,
  Cloud,
} from "lucide-react";
import TechStackCard from "../components/TechStackCard.astro";
import FeaturedBuild from "../components/FeaturedBuild.astro";
import Testimonials from "../components/Testimonials.astro";
import HomepagePortalSection from "../components/HomepagePortalSection.astro";
import { Image } from "astro:assets";

// Images
import heroBg from "../assets/images/hero-bg.png";
import urbanStayThumbnail from "../assets/images/urbanstaythumbnail.png";
import zenDenThumbnail from "../assets/images/Zendenthumbnail.png";
import cairnThumbnail from "../assets/images/cairnthumbnail.png";
import bistro44Thumbnail from "../assets/images/bistro44thumbnail.png";
import auraThumbnail from "../assets/images/aurathumbnail.png";
import echoChamberThumbnail from "../assets/vault/echo-chamber.png";

export const prerender = true;

const stats = [
  { value: "50+", label: "Web Projects Completed" },
  { value: "100%", label: "Client Satisfaction" },
  { value: "10+", label: "Custom Web Apps Built" },
  { value: "Falkirk Based", label: "Local UK Developer" },
];

const solutions = [
  {
    icon: Smartphone,
    title: "Bespoke Web App Development",
    desc: "Interactive tools built from scratch to solve your unique business challenges. Think quote builders, client portals, and project managers.",
  },
  {
    icon: Globe,
    title: "WordPress & WooCommerce Support",
    desc: "Comprehensive management and development, from custom themes to high-performing e-commerce stores.",
  },
  {
    icon: SearchCode,
    title: "Web Scraping & Data Extraction",
    desc: "Ethically gather and analyse data to generate leads, monitor competitors, or gain valuable market intelligence.",
  },
  {
    icon: LayoutTemplate,
    title: "Professional Web Design",
    desc: "Creating modern, responsive, and high-performing websites that are built to convert visitors into customers.",
    href: "/web-design",
  },
  {
    icon: Wrench,
    title: "Digital Tool & System Support",
    desc: "Expert system audits, tool recommendations, and setup to ensure your entire digital toolkit is working for you.",
  },
  {
    icon: ShieldCheck,
    title: "HTML Site Maintenance",
    desc: "Reliable maintenance and updates for non-CMS websites, ensuring your static site remains secure, fast, and up-to-date.",
  },
];

const projects = [
  {
    title: "Urban Stay",
    category: "Property Booking Platform",
    href: "https://urban-stay-seven.vercel.app/",
    image: urbanStayThumbnail,
  },
  {
    title: "The Zen Den",
    category: "Wellness Studio",
    href: "https://zen-den-azure.vercel.app/",
    image: zenDenThumbnail,
  },
  {
    title: "Cairn Architects",
    category: "Architecture Portfolio",
    href: "https://cairn-architects.vercel.app/",
    image: cairnThumbnail,
  },
  {
    title: "Bistro 44",
    category: "Restaurant Website",
    href: "https://portfolio-nicola-berry.vercel.app/?project=bistro-44",
    image: bistro44Thumbnail,
  },
  {
    title: "Aura",
    category: "Luxury Brand",
    href: "https://aura-nine-ochre.vercel.app/",
    image: auraThumbnail,
  },
  {
    title: "The Aesthetic Vault",
    category: "Design Systems",
    href: "/aesthetic-vault",
    image: echoChamberThumbnail,
    linkText: "View More Designs",
  },
];
---

<Layout
  title="Custom Code & Scale | Build Your Digital Authority | Empower Digital Solutions"
  description="Empower Digital Solutions - Custom Web Development & Digital Strategy. We build bespoke websites and web apps that drive growth."
>
  <section
    class="relative min-h-screen flex items-center justify-center text-center px-6 overflow-hidden"
  >
    <!-- Hero Background -->
    <div class="absolute inset-0 z-0">
      <Image
        src={heroBg}
        alt="Digital Horizon Hero"
        class="w-full h-full object-cover"
        width={1920}
        quality="high"
        loading="eager"
      />
      <div class="absolute inset-0 bg-dark-violet/60 mix-blend-multiply"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-5xl mx-auto">
      <h1
        class="text-5xl md:text-7xl font-heading font-bold text-white mb-6 tracking-tight"
      >
        CUSTOM CODE & SCALE
      </h1>
      <p
        class="text-xl md:text-2xl font-body text-white/90 max-w-3xl mx-auto font-light tracking-wide"
      >
        Digital Solutions Engineered for Growth
      </p>

      <div class="mt-12 flex flex-wrap justify-center items-center gap-6">
        <a
          href="#solutions"
          class="inline-block bg-empower-pink text-white font-bold py-4 px-10 rounded-full shadow-lg hover:bg-vibrant-magenta hover:scale-105 transition-all text-lg tracking-wide"
        >
          Explore Our Solutions
        </a>

        <a
          href="/contact"
          class="inline-block bg-transparent border-2 border-white text-white font-bold py-4 px-10 rounded-full hover:bg-white hover:text-dark-violet transition-all text-lg tracking-wide"
        >
          Get a Free Quote
        </a>
      </div>
    </div>
  </section>

  <section
    class="bg-white py-6 border-b border-gray-100 dark:bg-slate-800 dark:border-slate-700 transition-colors duration-300"
  >
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        {
          stats.map((stat) => (
            <div class="p-2">
              <h4 class="font-bold text-lg md:text-xl text-dark-violet dark:text-white">
                {stat.value}
              </h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                {stat.label}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Tech Stack Showcase -->
  <section
    class="py-20 bg-gray-50 dark:bg-slate-900 transition-colors duration-300"
  >
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2
          class="text-3xl md:text-4xl font-bold text-dark-violet dark:text-white mb-4"
        >
          Built With Modern Tech
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          We don't just use templates. We engineer digital solutions using the
          latest, most performant technologies.
        </p>
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto"
      >
        <TechStackCard
          name="Astro"
          icon={Rocket}
          description="The web framework for content-driven websites. Lightning fast and SEO optimised."
        />
        <TechStackCard
          name="Tailwind CSS"
          icon={Palette}
          description="A utility-first CSS framework for rapid UI development and bespoke designs."
        />
        <TechStackCard
          name="React"
          icon={Atom}
          description="A JavaScript library for building interactive user interfaces and complex web apps."
        />
        <TechStackCard
          name="TypeScript"
          icon={FileCode}
          description="Strongly typed JavaScript for scalable, robust, and error-free codebases."
        />
        <TechStackCard
          name="Node.js"
          icon={Server}
          description="JavaScript runtime for building fast, scalable network applications and APIs."
        />
        <TechStackCard
          name="Vercel"
          icon={Cloud}
          description="The platform for frontend developers, providing speed, reliability, and global scale."
        />
      </div>
    </div>
  </section>

  <section class="py-20 container mx-auto px-6">
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      <a
        href="/customwebapps"
        class="group block bg-white p-8 rounded-lg shadow-lg h-full hover:-translate-y-2 hover:shadow-xl hover:border-empower-pink border-2 border-transparent transition-all duration-300"
      >
        <BoxSelect className="w-12 h-12 text-empower-pink mb-4" />
        <h3
          class="text-2xl font-bold text-deep-purple group-hover:text-empower-pink transition-colors"
        >
          Explore Custom Web Apps
        </h3>
        <p class="text-gray-600 mt-2">
          Discover how a bespoke application can solve your unique business
          challenges and become your most valuable asset.
        </p>
      </a>
      <a
        href="/web-design"
        class="group block bg-white p-8 rounded-lg shadow-lg h-full hover:-translate-y-2 hover:shadow-xl hover:border-empower-pink border-2 border-transparent transition-all duration-300"
      >
        <LayoutTemplate className="w-12 h-12 text-empower-pink mb-4" />
        <h3
          class="text-2xl font-bold text-deep-purple group-hover:text-empower-pink transition-colors"
        >
          View Web Design Services
        </h3>
        <p class="text-gray-600 mt-2">
          Creating modern, responsive, and high-performing websites that are
          built to convert visitors into customers.
        </p>
      </a>
      <a
        href="/website-health-checker"
        class="group block bg-white p-8 rounded-lg shadow-lg h-full hover:-translate-y-2 hover:shadow-xl hover:border-empower-pink border-2 border-transparent transition-all duration-300"
      >
        <Activity className="w-12 h-12 text-empower-pink mb-4" />
        <h3
          class="text-2xl font-bold text-deep-purple group-hover:text-empower-pink transition-colors"
        >
          Free Website Health Check
        </h3>
        <p class="text-gray-600 mt-2">
          Use our free tool to get an instant report on your website's
          performance, accessibility, and SEO score.
        </p>
      </a>
    </div>
  </section>

  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
        <div>
          <h2 class="text-3xl font-bold text-empower-pink mb-4">
            Is Off-the-Shelf Software Holding You Back?
          </h2>
          <p class="text-gray-700 leading-relaxed mb-4">
            You have a unique way of working, but you're trying to force it into
            generic software that doesn't quite fit. You waste time with clunky
            workarounds, manual data entry, and processes that feel
            disconnected.
          </p>
          <p
            class="text-gray-700 leading-relaxed font-semibold text-dark-violet"
          >
            What if your website wasn't just a brochure, but an active part of
            your team? A tool that could generate quotes, onboard clients, or
            manage your projects exactly the way **you** want it to?
          </p>
        </div>
        <div
          class="bg-white p-8 rounded-2xl shadow-lg border-t-8 border-empower-pink text-center"
        >
          <Lightbulb className="w-16 h-16 text-empower-pink mx-auto mb-4" />
          <h3 class="font-bold text-xl text-dark-violet">
            That's Where a Custom Digital Solution Comes In.
          </h3>
          <p class="mt-2 text-gray-600">
            We build the bespoke tools and websites that off-the-shelf software
            can't provide, giving you a true competitive advantage.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Bespoke Services Grid -->
  <section
    id="solutions"
    class="py-24 bg-dark-violet text-white relative overflow-hidden"
  >
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10 pointer-events-none">
      <div
        class="absolute top-0 right-0 w-96 h-96 bg-empower-pink rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-96 h-96 bg-deep-purple rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"
      >
      </div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="mb-16">
        <h2 class="text-4xl md:text-5xl font-bold font-heading mb-6">
          Custom Solutions, <span class="text-empower-pink">Not Templates</span>
        </h2>
        <p class="text-xl text-purple-100 max-w-2xl font-light">
          We don't fit your business into a box. We build the box around your
          business.
        </p>
      </div>

      <div class="grid md:grid-cols-12 gap-8">
        <!-- Item 1: Bespoke Web Design (1/3 width on desktop) -->
        <div
          class="md:col-span-4 bg-white/5 backdrop-blur-sm border border-white/10 p-8 rounded-2xl hover:bg-white/10 transition-all duration-300 group"
        >
          <LayoutTemplate
            className="w-12 h-12 text-empower-pink mb-6 group-hover:scale-110 transition-transform"
          />
          <h3 class="text-2xl font-bold mb-4">Bespoke Web Design</h3>
          <p class="text-purple-100 leading-relaxed mb-6">
            Forget generic themes. We design high-performance, accessible, and
            stunning websites that reflect your unique brand identity and
            convert visitors into loyal customers.
          </p>
          <a
            href="/design-process"
            class="inline-flex items-center text-empower-pink font-bold hover:text-white transition-colors"
          >
            See Our Design Process <ArrowRight className="w-4 h-4 ml-2" />
          </a>
        </div>

        <!-- Item 2: Custom App Development (2/3 width on desktop) -->
        <div
          class="md:col-span-8 bg-gradient-to-br from-deep-purple/50 to-dark-violet/50 backdrop-blur-sm border border-white/10 p-8 rounded-2xl hover:border-empower-pink/50 transition-all duration-300 group relative overflow-hidden"
        >
          <div
            class="absolute top-0 right-0 p-8 opacity-10 group-hover:opacity-20 transition-opacity"
          >
            <Smartphone className="w-32 h-32" />
          </div>
          <div class="relative z-10">
            <Smartphone
              className="w-12 h-12 text-empower-pink mb-6 group-hover:scale-110 transition-transform"
            />
            <h3 class="text-2xl font-bold mb-4">
              Custom Application Development
            </h3>
            <p class="text-purple-100 leading-relaxed mb-6 max-w-2xl">
              Streamline your operations with software built specifically for
              your workflows. From client portals and booking systems to
              internal tools and automation dashboards, we engineer solutions
              that save you time and money.
            </p>
            <ul class="grid md:grid-cols-2 gap-4 mb-8 text-sm text-purple-200">
              <li class="flex items-center">
                <span class="w-2 h-2 bg-empower-pink rounded-full mr-2"
                ></span>Client Portals & Dashboards
              </li>
              <li class="flex items-center">
                <span class="w-2 h-2 bg-empower-pink rounded-full mr-2"
                ></span>Booking & Scheduling Systems
              </li>
              <li class="flex items-center">
                <span class="w-2 h-2 bg-empower-pink rounded-full mr-2"
                ></span>Inventory & Data Management
              </li>
              <li class="flex items-center">
                <span class="w-2 h-2 bg-empower-pink rounded-full mr-2"
                ></span>Automated Workflows
              </li>
            </ul>
            <a
              href="/customwebapps"
              class="inline-flex items-center bg-empower-pink text-white font-bold py-3 px-8 rounded-lg hover:bg-vibrant-magenta transition-colors shadow-lg"
            >
              Explore Custom Apps <ArrowRight className="w-4 h-4 ml-2" />
            </a>
          </div>
        </div>

        <!-- Item 3: Digital Engine Consulting (Full width or split) -->
        <div
          class="md:col-span-12 bg-white/5 backdrop-blur-sm border border-white/10 p-8 rounded-2xl hover:bg-white/10 transition-all duration-300 group flex flex-col md:flex-row items-center gap-8"
        >
          <div class="flex-shrink-0">
            <div
              class="w-20 h-20 bg-empower-pink/20 rounded-full flex items-center justify-center"
            >
              <Lightbulb className="w-10 h-10 text-empower-pink" />
            </div>
          </div>
          <div>
            <h3 class="text-2xl font-bold mb-2">Digital Engine Consulting</h3>
            <p class="text-purple-100 leading-relaxed">
              Not sure what you need? We analyse your current processes and tech
              stack to identify bottlenecks and opportunities for automation. We
              don't just build software; we build your digital growth engine.
            </p>
          </div>
          <div class="md:ml-auto flex-shrink-0">
            <a
              href="/contact"
              class="inline-flex items-center border border-white/30 text-white font-bold py-3 px-8 rounded-lg hover:bg-white hover:text-dark-violet transition-colors"
            >
              Book a Strategy Call
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <HomepagePortalSection />

  <FeaturedBuild />

  <Testimonials />

  <section
    class="py-20 bg-gray-50 dark:bg-slate-900 transition-colors duration-300 overflow-hidden"
  >
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-empower-pink">
          Good Design Justifies Premium Pricing
        </h2>
        <p
          class="text-lg text-gray-700 dark:text-gray-300 mt-4 max-w-3xl mx-auto"
        >
          A modern, professional website builds **Authority** and converts
          visitors. Check out some of our recent work.
        </p>
      </div>

      <!-- Horizontal Scroll Container -->
      <div
        class="flex overflow-x-auto pb-8 gap-8 snap-x snap-mandatory scrollbar-hide -mx-6 px-6 md:mx-0 md:px-0"
      >
        {
          projects.map((project) => (
            <div class="min-w-[85vw] md:min-w-[400px] snap-center">
              <ProjectCard
                title={project.title}
                category={project.category}
                href={project.href}
                image={project.image}
                linkText={project.linkText}
              />
            </div>
          ))
        }
      </div>

      <!-- Scroll Indicator -->
      <div class="flex justify-center mt-4 gap-2">
        <div class="w-2 h-2 rounded-full bg-empower-pink"></div>
        <div class="w-2 h-2 rounded-full bg-gray-300 dark:bg-gray-600"></div>
        <div class="w-2 h-2 rounded-full bg-gray-300 dark:bg-gray-600"></div>
      </div>
    </div>
  </section>

  <!-- Brand Voice Blockquote -->
  <section class="py-24 bg-deep-purple text-white relative overflow-hidden">
    <div
      class="absolute top-0 left-0 text-white/5 font-serif text-[20rem] leading-none -translate-y-1/2 translate-x-10 pointer-events-none"
    >
      "
    </div>

    <div class="container mx-auto px-6 relative z-10 text-center">
      <blockquote class="max-w-4xl mx-auto">
        <p
          class="text-3xl md:text-5xl font-bold font-heading leading-tight mb-8"
        >
          "Partnering with us means building beyond a website: it's building
          your <span class="text-empower-pink">digital engine</span>."
        </p>
        <footer class="text-xl text-purple-200 font-light">
          Nicola | Empower Digital Solutions
        </footer>
      </blockquote>

      <div class="mt-12">
        <a
          href="/contact"
          class="inline-block bg-white text-deep-purple font-bold py-4 px-10 rounded-full shadow-lg hover:shadow-xl hover:scale-105 transition-all text-lg tracking-wide"
        >
          Start Your Engine
        </a>
      </div>
    </div>
  </section>

  <section class="py-10 container mx-auto px-6">
    <div
      class="bg-gradient-to-r from-[#A0007E] to-[#E5007E] text-white rounded-2xl shadow-xl p-8 md:p-12 max-w-4xl mx-auto text-center"
    >
      <h2 class="text-3xl font-bold">
        Ready to Upgrade Your Digital Presence?
      </h2>
      <p class="text-lg opacity-90 mt-4 max-w-xl mx-auto">
        Whether you need a brand new website or a custom tool to streamline your
        work, **we** can build it. Let's chat about your high-value project.
      </p>
      <a
        href="/contact"
        class="mt-8 inline-block bg-white text-deep-purple font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all transform"
      >
        Get a Free, No-Obligation Quote
      </a>
    </div>
  </section>

  <StickyBanner client:load />
</Layout>
