---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/main.css";
import { Analytics } from "@vercel/analytics/react";

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const {
	title,
	description = "Empower Digital Solutions - Custom Web Development & Digital Strategy",
	image = "/images/og-image.jpg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={canonicalURL} />
		<link rel="icon" type="image/jpeg" href="/favicon.jpg" />
		<link rel="manifest" href="/manifest.json" />
		<meta name="theme-color" content="#8b5cf6" />
		<link rel="apple-touch-icon" href="/icon-192.png" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />
		<meta property="og:site_name" content="Empower Digital Solutions" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<!-- Partytown Analytics -->
		<script
			type="text/partytown"
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-PZZTSKPBF0"
			is:inline></script>
		<script type="text/partytown" is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-PZZTSKPBF0");
		</script>

		<script is:inline>
			if ("serviceWorker" in navigator) {
				window.addEventListener("load", () => {
					navigator.serviceWorker.register("/sw.js");
				});
			}
		</script>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Open+Sans:wght@400;600&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>

		<script type="application/ld+json" is:inline>
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Empower Digital Solutions",
				"url": "https://empowerdigitalsolutions.co.uk",
				"logo": "https://empowerdigitalsolutions.co.uk/icon-512.png",
				"contactPoint": {
					"@type": "ContactPoint",
					"contactType": "customer service",
					"email": "hello@empowerdigitalsolutions.co.uk"
				}
			}
		</script>
		<!-- <ClientRouter /> -->
	</head>
	<body
		class="font-body text-gray-900 bg-gray-50 dark:bg-slate-950 dark:text-gray-50 flex flex-col min-h-screen overflow-x-hidden"
	>
		<a
			href="#main-content"
			class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-white focus:text-slate-900 focus:shadow-lg focus:rounded-lg focus:font-bold focus:outline-hidden focus:ring-2 focus:ring-empower-pink"
		>
			Skip to content
		</a>
		<Header />
		<main id="main-content" class="grow">
			<slot />
		</main>
		<Footer />
		<Analytics />
	</body>
</html>
