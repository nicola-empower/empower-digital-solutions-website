---
import { Image } from "astro:assets";
import logoImage from "../assets/images/logo.jpg";

const links = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Services", href: "/services" },
  { name: "Insights", href: "/insights" },
  { name: "Custom Apps", href: "/customwebapps" },
  { name: "Portfolio", href: "https://portfolio-nicola-berry.vercel.app/" },
  { name: "Contact", href: "/contact" },
];
---

<header
  class="bg-white dark:bg-slate-900 shadow-md sticky top-0 z-50 transition-colors duration-300"
>
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center gap-2 group">
      <Image
        src={logoImage}
        alt="Empower Digital Solutions"
        style="height: 40px; width: auto; border-radius: 9999px;"
        width={80}
        height={80}
      />
      <span
        class="font-heading font-bold text-xl text-dark-violet dark:text-white group-hover:text-empower-pink transition-colors"
      >
        Empower Digital Solutions
      </span>
    </a>

    <div class="hidden md:flex items-center gap-8">
      <a
        href="/"
        class="text-gray-700 dark:text-gray-200 hover:text-empower-pink dark:hover:text-empower-pink font-semibold transition-colors"
        >Home</a
      >
      <a
        href="/about"
        class="text-gray-700 dark:text-gray-200 hover:text-empower-pink dark:hover:text-empower-pink font-semibold transition-colors"
        >About</a
      >
      <a
        href="/services"
        class="text-gray-700 dark:text-gray-200 hover:text-empower-pink dark:hover:text-empower-pink font-semibold transition-colors"
        >Services</a
      >
      <a
        href="/insights"
        class="text-gray-700 dark:text-gray-200 hover:text-empower-pink dark:hover:text-empower-pink font-semibold transition-colors"
        >Insights</a
      >
      <a
        href="/customwebapps"
        class="text-gray-700 dark:text-gray-200 hover:text-empower-pink dark:hover:text-empower-pink font-semibold transition-colors"
        >Custom Apps</a
      >
      <a
        href="https://portfolio-nicola-berry.vercel.app/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-700 dark:text-gray-200 hover:text-empower-pink dark:hover:text-empower-pink font-semibold transition-colors"
        >Portfolio</a
      >
      <a
        href="/contact"
        class="text-gray-700 dark:text-gray-200 hover:text-empower-pink dark:hover:text-empower-pink font-semibold transition-colors"
        >Contact</a
      >

      <a
        href="/contact"
        class="bg-empower-pink text-white font-bold py-2 px-6 rounded-lg hover:bg-vibrant-magenta transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
      >
        Get a Quote
      </a>
    </div>
  </nav>

  <div class="md:hidden flex items-center gap-4">
    <button
      id="mobile-menu-btn"
      class="text-gray-700 dark:text-gray-200 focus:outline-none"
      aria-label="Open Mobile Menu"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
</header>

<!-- Mobile Menu -->
<div
  id="mobile-menu"
  class="hidden md:hidden bg-white dark:bg-slate-900 border-t border-gray-100 dark:border-slate-800"
>
  <div class="container mx-auto px-6 py-4 flex flex-col gap-4">
    {
      links.map((link) => (
        <a
          href={link.href}
          class="text-gray-700 dark:text-gray-200 hover:text-empower-pink dark:hover:text-empower-pink font-semibold transition-colors"
        >
          {link.name}
        </a>
      ))
    }
    <a
      href="/contact"
      class="bg-empower-pink text-white font-bold py-2 px-6 rounded-lg hover:bg-vibrant-magenta transition-all shadow-md hover:shadow-lg text-center"
    >
      Get a Quote
    </a>
  </div>
</div>

<script>
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
