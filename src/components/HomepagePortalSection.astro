---
import {
    ShieldCheck,
    Activity,
    LayoutTemplate,
    ArrowRight,
} from "lucide-react";
---

<!-- Client Portal Feature Section -->
<section class="py-20 bg-slate-900 text-white relative overflow-hidden">
    <div
        class="absolute inset-0 bg-[url('/images/hero-bg.png')] bg-cover bg-center opacity-10"
    >
    </div>
    <div class="container mx-auto px-6 relative z-10">
        <div class="flex flex-col md:flex-row items-center gap-12">
            <div class="md:w-1/2">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-empower-pink/20 text-empower-pink font-bold text-sm mb-6 border border-empower-pink/30"
                >
                    <span
                        class="w-2 h-2 rounded-full bg-empower-pink animate-pulse"
                    ></span>
                    New Feature
                </div>
                <h2
                    class="text-3xl md:text-5xl font-bold font-heading mb-6 leading-tight"
                >
                    Radical Transparency with our <span
                        class="text-empower-pink">Client Portal</span
                    >
                </h2>
                <p class="text-lg text-gray-300 mb-8 leading-relaxed">
                    Stop chasing emails. We provide every client with a
                    dedicated, secure dashboard to track real-time progress,
                    share files, and manage tasks. You'll never have to ask us
                    "Where are we at?" again.
                </p>
                <ul class="space-y-4 mb-10">
                    <li class="flex items-center gap-3">
                        <div
                            class="p-1 rounded-full bg-green-500/20 text-green-400"
                        >
                            <ShieldCheck className="w-5 h-5" />
                        </div>
                        <span class="text-gray-200"
                            >Secure File Sharing & Storage</span
                        >
                    </li>
                    <li class="flex items-center gap-3">
                        <div
                            class="p-1 rounded-full bg-blue-500/20 text-blue-400"
                        >
                            <Activity className="w-5 h-5" />
                        </div>
                        <span class="text-gray-200">Live Progress Tracking</span
                        >
                    </li>
                    <li class="flex items-center gap-3">
                        <div
                            class="p-1 rounded-full bg-purple-500/20 text-purple-400"
                        >
                            <LayoutTemplate className="w-5 h-5" />
                        </div>
                        <span class="text-gray-200">Interactive Task Lists</span
                        >
                    </li>
                </ul>
                <a
                    href="/clientportal"
                    class="inline-flex items-center bg-white text-slate-900 font-bold py-4 px-8 rounded-xl hover:bg-gray-100 hover:scale-105 transition-all shadow-lg"
                >
                    Try the Interactive Demo <ArrowRight
                        className="w-5 h-5 ml-2"
                    />
                </a>
            </div>
            <div class="md:w-1/2 relative">
                <div
                    class="absolute -inset-4 bg-gradient-to-r from-empower-pink to-purple-600 rounded-2xl blur-lg opacity-30 animate-pulse"
                >
                </div>
                <div
                    class="relative bg-slate-800 border border-slate-700 rounded-2xl p-6 shadow-2xl"
                >
                    <!-- Mock UI Representation -->
                    <div
                        class="flex items-center justify-between mb-6 border-b border-slate-700 pb-4"
                    >
                        <div class="flex items-center gap-3">
                            <div class="w-3 h-3 rounded-full bg-red-500"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500">
                            </div>
                            <div class="w-3 h-3 rounded-full bg-green-500">
                            </div>
                        </div>
                        <div class="text-xs text-slate-500 font-mono">
                            dashboard.empower.com
                        </div>
                    </div>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center">
                            <div
                                class="h-8 w-1/3 bg-slate-700 rounded animate-pulse"
                            >
                            </div>
                            <div
                                class="h-8 w-24 bg-empower-pink rounded animate-pulse"
                            >
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div
                                class="h-32 bg-slate-700/50 rounded-xl border border-slate-700 p-4"
                            >
                                <div
                                    class="h-8 w-8 bg-purple-500/20 rounded mb-2"
                                >
                                </div>
                                <div class="h-4 w-20 bg-slate-600 rounded mb-2">
                                </div>
                                <div class="h-2 w-full bg-slate-700 rounded">
                                </div>
                            </div>
                            <div
                                class="h-32 bg-slate-700/50 rounded-xl border border-slate-700 p-4"
                            >
                                <div
                                    class="h-8 w-8 bg-blue-500/20 rounded mb-2"
                                >
                                </div>
                                <div class="h-4 w-20 bg-slate-600 rounded mb-2">
                                </div>
                                <div class="h-2 w-full bg-slate-700 rounded">
                                </div>
                            </div>
                        </div>
                        <div
                            class="h-12 w-full bg-slate-700/30 rounded-lg border border-slate-700 flex items-center px-4"
                        >
                            <div
                                class="h-4 w-4 rounded-full border border-slate-500 mr-3"
                            >
                            </div>
                            <div class="h-3 w-1/2 bg-slate-600 rounded"></div>
                        </div>
                        <div
                            class="h-12 w-full bg-slate-700/30 rounded-lg border border-slate-700 flex items-center px-4"
                        >
                            <div
                                class="h-4 w-4 rounded-full border border-green-500 mr-3 bg-green-500/20"
                            >
                            </div>
                            <div
                                class="h-3 w-1/3 bg-slate-600 rounded opacity-50 line-through"
                            >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
