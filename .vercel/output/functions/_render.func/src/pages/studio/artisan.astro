---
import Layout from "../../layouts/Layout.astro";
import {
    Coffee,
    Mic,
    Headphones,
    Heart,
    Sun,
    Clock,
    ArrowDown,
    Palette,
    Type,
} from "lucide-astro";
---

<Layout title="The Artisan | Aesthetic Vault">
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;1,400&family=Nunito:wght@300;400;600&display=swap");

        .font-serif-artisan {
            font-family: "Lora", serif;
        }
        .font-sans-artisan {
            font-family: "Nunito", sans-serif;
        }

        .grain-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 50;
            opacity: 0.05;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
        }
    </style>

    <div class="grain-overlay"></div>

    <main
        class="bg-[#fff9f0] text-[#5c4033] min-h-screen selection:bg-[#d97706] selection:text-white"
    >
        <!-- HERO SECTION -->
        <section
            class="relative h-screen w-full flex items-center justify-center overflow-hidden"
        >
            <!-- Background Image -->
            <div class="absolute inset-0 z-0">
                <img
                    src="/images/artisan-hero.png"
                    alt="Artisan Workspace"
                    class="w-full h-full object-cover"
                />
                <div
                    class="absolute inset-0 bg-[#3e2723]/40 mix-blend-multiply"
                >
                </div>
                <div
                    class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-[#fff9f0]"
                >
                </div>
            </div>

            <!-- Content -->
            <div
                class="relative z-10 text-center text-white p-6 max-w-4xl mx-auto"
            >
                <div
                    class="inline-block border border-white/30 px-4 py-1 rounded-full text-sm font-sans-artisan tracking-widest uppercase mb-6 backdrop-blur-sm"
                >
                    Aesthetic Vault No. 04
                </div>
                <h1
                    class="font-serif-artisan text-7xl md:text-9xl mb-6 italic text-[#fff9f0] drop-shadow-lg"
                >
                    The Artisan
                </h1>
                <p
                    class="font-sans-artisan text-xl md:text-2xl font-light tracking-wide opacity-90 max-w-2xl mx-auto mb-12"
                >
                    Warm. Analog. Handcrafted. <br />
                    For brands that value the human touch in a digital world.
                </p>

                <a
                    href="#showcase"
                    class="inline-flex flex-col items-center gap-2 opacity-80 hover:opacity-100 transition-opacity animate-bounce"
                >
                    <span
                        class="text-xs font-sans-artisan uppercase tracking-widest"
                        >Explore Designs</span
                    >
                    <ArrowDown class="w-6 h-6" />
                </a>
            </div>
        </section>

        <!-- VIBE DNA -->
        <section class="py-20 px-6 border-b border-[#5c4033]/10">
            <div
                class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12"
            >
                <div class="md:col-span-1">
                    <h2 class="font-serif-artisan text-3xl mb-4">Vibe DNA</h2>
                    <p
                        class="font-sans-artisan text-lg opacity-70 leading-relaxed"
                    >
                        This aesthetic combines serif typography with soft,
                        earthy tones and subtle textures. It evokes feelings of
                        trust, craftsmanship, and slow living.
                    </p>
                </div>
                <div
                    class="md:col-span-2 grid grid-cols-1 sm:grid-cols-2 gap-8"
                >
                    <!-- Typography -->
                    <div
                        class="bg-white/50 p-6 rounded-xl border border-[#5c4033]/10"
                    >
                        <div
                            class="flex items-center gap-3 mb-4 text-[#d97706]"
                        >
                            <Type class="w-5 h-5" />
                            <span
                                class="font-sans-artisan text-xs uppercase tracking-widest"
                                >Typography</span
                            >
                        </div>
                        <div class="space-y-4">
                            <div>
                                <span class="font-serif-artisan text-4xl"
                                    >Lora</span
                                >
                                <p class="text-xs opacity-50 mt-1">
                                    Primary Header
                                </p>
                            </div>
                            <div>
                                <span
                                    class="font-sans-artisan text-2xl font-light"
                                    >Nunito</span
                                >
                                <p class="text-xs opacity-50 mt-1">Body Text</p>
                            </div>
                        </div>
                    </div>
                    <!-- Palette -->
                    <div
                        class="bg-white/50 p-6 rounded-xl border border-[#5c4033]/10"
                    >
                        <div
                            class="flex items-center gap-3 mb-4 text-[#d97706]"
                        >
                            <Palette class="w-5 h-5" />
                            <span
                                class="font-sans-artisan text-xs uppercase tracking-widest"
                                >Palette</span
                            >
                        </div>
                        <div class="flex gap-4">
                            <div class="text-center">
                                <div
                                    class="w-12 h-12 rounded-full bg-[#5c4033] mb-2 shadow-md"
                                >
                                </div>
                                <span class="text-xs font-mono opacity-50"
                                    >#5C4033</span
                                >
                            </div>
                            <div class="text-center">
                                <div
                                    class="w-12 h-12 rounded-full bg-[#d97706] mb-2 shadow-md"
                                >
                                </div>
                                <span class="text-xs font-mono opacity-50"
                                    >#D97706</span
                                >
                            </div>
                            <div class="text-center">
                                <div
                                    class="w-12 h-12 rounded-full bg-[#fff9f0] mb-2 shadow-md border border-black/10"
                                >
                                </div>
                                <span class="text-xs font-mono opacity-50"
                                    >#FFF9F0</span
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SHOWCASE: SLOW ROAST -->
        <section id="showcase" class="py-32 px-6 relative">
            <div class="max-w-7xl mx-auto">
                <div
                    class="flex flex-col md:flex-row items-center justify-between mb-16"
                >
                    <div>
                        <span
                            class="font-sans-artisan text-[#d97706] tracking-widest text-sm uppercase font-bold"
                            >Design Sample 01</span
                        >
                        <h2
                            class="font-serif-artisan text-5xl md:text-6xl mt-2 text-[#3e2723]"
                        >
                            Slow Roast
                        </h2>
                    </div>
                    <div class="mt-6 md:mt-0 max-w-md text-right md:text-left">
                        <p class="font-sans-artisan text-lg opacity-70">
                            A retail experience for artisanal products. Focus on
                            storytelling, product provenance, and tactile
                            imagery.
                        </p>
                    </div>
                </div>

                <!-- Mockup Container -->
                <a
                    href="/studio/artisan/slow-roast"
                    class="block bg-white rounded-3xl shadow-2xl overflow-hidden border border-[#5c4033]/10 hover:shadow-3xl hover:-translate-y-1 transition-all duration-300 group"
                >
                    <!-- Mock Browser Header -->
                    <div
                        class="bg-[#f0f0f0] px-4 py-3 flex items-center gap-2 border-b border-gray-200"
                    >
                        <div class="w-3 h-3 rounded-full bg-red-400"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                        <div class="w-3 h-3 rounded-full bg-green-400"></div>
                        <div
                            class="ml-4 bg-white px-3 py-1 rounded-md text-xs text-gray-400 flex-grow max-w-md text-center group-hover:text-[#d97706] transition-colors"
                        >
                            slowroast.co
                        </div>
                    </div>

                    <!-- Live Preview Area -->
                    <div class="p-12 bg-[#fff9f0] text-center relative">
                        <!-- Hover Overlay -->
                        <div
                            class="absolute inset-0 bg-[#d97706]/0 group-hover:bg-[#d97706]/5 transition-colors z-0"
                        >
                        </div>

                        <div class="relative z-10">
                            <div
                                class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-[#5c4033] text-[#fff9f0] mb-8 group-hover:scale-110 transition-transform"
                            >
                                <Coffee class="w-8 h-8" />
                            </div>
                            <h1
                                class="font-serif-artisan text-6xl mb-6 text-[#3e2723]"
                            >
                                Mornings, Reclaimed.
                            </h1>
                            <p
                                class="font-sans-artisan text-xl leading-relaxed max-w-2xl mx-auto mb-12 text-[#795548]"
                            >
                                We don't automate our roast. We listen to the
                                beans. Small batch coffee for people who sit
                                down to drink it.
                            </p>
                            <button
                                class="bg-[#d97706] text-white px-8 py-3 rounded-full font-sans-artisan font-semibold group-hover:bg-[#b45309] transition-colors shadow-lg shadow-orange-900/10"
                            >
                                Enter Site
                            </button>
                        </div>

                        <div
                            class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 text-left relative z-10"
                        >
                            <div
                                class="bg-white/50 p-6 rounded-xl border border-[#5c4033]/10"
                            >
                                <Heart class="w-6 h-6 mb-3 text-[#d97706]" />
                                <h3
                                    class="font-serif-artisan text-lg font-semibold"
                                >
                                    Fair Trade
                                </h3>
                                <p class="text-sm opacity-70">
                                    Farmers first. Always.
                                </p>
                            </div>
                            <div
                                class="bg-white/50 p-6 rounded-xl border border-[#5c4033]/10"
                            >
                                <Clock class="w-6 h-6 mb-3 text-[#d97706]" />
                                <h3
                                    class="font-serif-artisan text-lg font-semibold"
                                >
                                    Small Batch
                                </h3>
                                <p class="text-sm opacity-70">
                                    Roasted every Tuesday.
                                </p>
                            </div>
                            <div
                                class="bg-white/50 p-6 rounded-xl border border-[#5c4033]/10"
                            >
                                <Sun class="w-6 h-6 mb-3 text-[#d97706]" />
                                <h3
                                    class="font-serif-artisan text-lg font-semibold"
                                >
                                    Perfect Grind
                                </h3>
                                <p class="text-sm opacity-70">
                                    Consistent every time.
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </section>

        <!-- SHOWCASE: ECHO CHAMBER -->
        <section
            class="py-32 px-6 bg-[#2d241e] text-[#e6dccf] relative overflow-hidden"
        >
            <!-- Background Circles -->
            <div
                class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] border border-[#e6dccf]/5 rounded-full pointer-events-none"
            >
            </div>
            <div
                class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] border border-[#e6dccf]/5 rounded-full pointer-events-none"
            >
            </div>

            <div class="max-w-7xl mx-auto relative z-10">
                <div
                    class="flex flex-col md:flex-row items-center justify-between mb-16"
                >
                    <div>
                        <span
                            class="font-sans-artisan text-[#d97706] tracking-widest text-sm uppercase font-bold"
                            >Design Sample 02</span
                        >
                        <h2
                            class="font-serif-artisan text-5xl md:text-6xl mt-2"
                        >
                            Echo Chamber
                        </h2>
                    </div>
                    <div class="mt-6 md:mt-0 max-w-md text-right md:text-left">
                        <p class="font-sans-artisan text-lg opacity-70">
                            A media-rich layout for podcasts, blogs, or
                            musicians. Dark mode implementation of the Artisan
                            vibe.
                        </p>
                    </div>
                </div>

                <!-- Mockup Container -->
                <a
                    href="/studio/artisan/echo-chamber"
                    class="block bg-[#1a1512] rounded-3xl shadow-2xl overflow-hidden border border-[#e6dccf]/10 hover:border-[#d97706]/50 transition-colors group"
                >
                    <!-- Mock Browser Header -->
                    <div
                        class="bg-[#2a2522] px-4 py-3 flex items-center gap-2 border-b border-[#3e3229]"
                    >
                        <div class="w-3 h-3 rounded-full bg-red-400"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                        <div class="w-3 h-3 rounded-full bg-green-400"></div>
                        <div
                            class="ml-4 bg-[#1a1512] px-3 py-1 rounded-md text-xs text-gray-500 flex-grow max-w-md text-center group-hover:text-[#d97706] transition-colors"
                        >
                            echochamber.fm
                        </div>
                    </div>

                    <div
                        class="p-12 grid grid-cols-1 lg:grid-cols-2 gap-16 items-center relative"
                    >
                        <!-- Hover Overlay -->
                        <div
                            class="absolute inset-0 bg-[#d97706]/0 group-hover:bg-[#d97706]/5 transition-colors z-0"
                        >
                        </div>

                        <div class="relative z-10">
                            <div
                                class="flex items-center gap-3 mb-8 text-[#d97706]"
                            >
                                <Mic class="w-6 h-6" />
                                <span
                                    class="font-sans-artisan tracking-widest text-sm uppercase"
                                    >Now Recording</span
                                >
                            </div>
                            <h2
                                class="font-serif-artisan text-5xl mb-8 leading-tight"
                            >
                                Stories That<br />Linger.
                            </h2>
                            <p
                                class="font-sans-artisan text-lg opacity-80 mb-10 leading-relaxed"
                            >
                                An independent network for audio documentaries.
                                Put on your headphones and drift away.
                            </p>
                            <div
                                class="flex items-center gap-3 bg-[#e6dccf] text-[#2d241e] px-8 py-4 rounded-lg font-sans-artisan font-bold group-hover:bg-white transition-colors w-fit"
                            >
                                <Headphones class="w-5 h-5" /> Enter Site
                            </div>
                        </div>
                        <div class="space-y-4">
                            <div
                                class="bg-[#3e3229] p-6 rounded-xl border border-[#e6dccf]/10 flex justify-between items-center"
                            >
                                <div>
                                    <h3
                                        class="font-serif-artisan text-xl text-[#d97706]"
                                    >
                                        The Silent City
                                    </h3>
                                    <p class="text-sm opacity-60">
                                        Episode 01 • 45 min
                                    </p>
                                </div>
                                <div
                                    class="w-10 h-10 rounded-full bg-[#2d241e] flex items-center justify-center"
                                >
                                    <ArrowDown class="w-4 h-4 -rotate-90" />
                                </div>
                            </div>
                            <div
                                class="bg-[#3e3229] p-6 rounded-xl border border-[#e6dccf]/10 flex justify-between items-center opacity-70"
                            >
                                <div>
                                    <h3 class="font-serif-artisan text-xl">
                                        Midnight Train
                                    </h3>
                                    <p class="text-sm opacity-60">
                                        Episode 02 • 52 min
                                    </p>
                                </div>
                                <div
                                    class="w-10 h-10 rounded-full bg-[#2d241e] flex items-center justify-center"
                                >
                                    <ArrowDown class="w-4 h-4 -rotate-90" />
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-24 text-center">
            <h2
                class="font-serif-artisan text-4xl md:text-5xl mb-8 text-[#3e2723]"
            >
                Ready to build with this vibe?
            </h2>
            <a
                href="/contact"
                class="inline-block bg-[#d97706] text-white px-12 py-4 rounded-full font-sans-artisan font-bold text-xl hover:bg-[#b45309] transition-colors shadow-xl shadow-orange-900/20"
            >
                Start Your Project
            </a>
        </section>
    </main>
</Layout>
