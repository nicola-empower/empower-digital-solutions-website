---
import Layout from "../../../layouts/Layout.astro";
import {
    Zap,
    ShoppingBag,
    Disc,
    ArrowRight,
    ArrowLeft,
    Cpu,
} from "lucide-astro";
---

<Layout title="NEXUS | The Disruptor Vault">
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400&family=Syne:wght@400;700;800&display=swap");

        .font-disruptor-header {
            font-family: "Syne", sans-serif;
        }
        .font-disruptor-body {
            font-family: "Space Mono", monospace;
        }

        /* Glitch Animation */
        @keyframes glitch {
            0% {
                transform: translate(0);
            }
            20% {
                transform: translate(-2px, 2px);
            }
            40% {
                transform: translate(-2px, -2px);
            }
            60% {
                transform: translate(2px, 2px);
            }
            80% {
                transform: translate(2px, -2px);
            }
            100% {
                transform: translate(0);
            }
        }

        .glitch-hover:hover {
            animation: glitch 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both
                infinite;
            color: #ccff00;
        }
    </style>

    <main
        class="bg-[#050505] text-[#F0F0F0] min-h-screen selection:bg-[#BF00FF] selection:text-white relative overflow-hidden"
    >
        <!-- Navigation -->
        <nav
            class="absolute top-0 left-0 w-full p-6 z-50 flex justify-between items-center bg-black/50 backdrop-blur-md border-b border-[#333]"
        >
            <a
                href="/studio/disruptor"
                class="flex items-center gap-2 font-disruptor-body text-xs uppercase tracking-widest hover:text-[#CCFF00] transition-colors"
            >
                <ArrowLeft class="w-4 h-4" /> Back to Vault
            </a>
            <div class="flex items-center gap-2">
                <Cpu class="w-6 h-6 text-[#BF00FF]" />
                <div
                    class="font-disruptor-header font-bold text-xl tracking-tighter"
                >
                    NEXUS
                </div>
            </div>
            <button
                class="border border-[#333] hover:border-[#CCFF00] hover:text-[#CCFF00] text-white px-6 py-2 rounded-none font-disruptor-body text-xs uppercase transition-colors"
            >
                Connect Wallet
            </button>
        </nav>

        <!-- HERO SECTION -->
        <section
            class="relative h-screen w-full flex items-center justify-center bg-[#050505]"
        >
            <!-- Background Image -->
            <div class="absolute inset-0 z-0 opacity-60">
                <img
                    src="/images/nexus-hero.png"
                    alt="Cyberpunk Streetwear"
                    class="w-full h-full object-cover grayscale contrast-125"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-[#050505] via-[#050505]/50 to-transparent"
                >
                </div>
                <div class="absolute inset-0 bg-[#BF00FF]/10 mix-blend-overlay">
                </div>
            </div>

            <!-- Grid Overlay -->
            <div
                class="absolute inset-0 z-0 opacity-20"
                style="background-image: linear-gradient(#333 1px, transparent 1px), linear-gradient(90deg, #333 1px, transparent 1px); background-size: 40px 40px;"
            >
            </div>

            <div
                class="max-w-7xl mx-auto w-full px-6 relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
            >
                <div>
                    <div
                        class="inline-flex items-center gap-2 border border-[#CCFF00] px-3 py-1 text-[#CCFF00] text-xs font-disruptor-body uppercase tracking-widest mb-8 bg-black/80 backdrop-blur-sm"
                    >
                        <span class="w-2 h-2 bg-[#CCFF00] animate-pulse"></span>
                        Drop 001 Live
                    </div>

                    <h1
                        class="font-disruptor-header font-extrabold text-7xl md:text-9xl mb-6 leading-[0.8] tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-white via-gray-200 to-gray-500"
                    >
                        WEAR<br />THE<br />GLITCH.
                    </h1>

                    <p
                        class="font-disruptor-body text-lg md:text-xl text-gray-400 mb-10 max-w-xl leading-relaxed border-l-2 border-[#BF00FF] pl-6"
                    >
                        Armor for the digital age. Limited runs. No reprints.
                        When it's gone, it's archived forever.
                    </p>

                    <div class="flex flex-col sm:flex-row gap-4">
                        <button
                            class="bg-[#CCFF00] text-black px-8 py-4 font-disruptor-header font-bold text-xl uppercase hover:bg-[#b3e600] transition-colors flex items-center justify-center gap-2 glitch-hover clip-path-polygon"
                        >
                            [ ENTER THE VOID ]
                        </button>
                    </div>
                </div>

                <!-- Product Card Mockup -->
                <div class="hidden lg:block relative group">
                    <div
                        class="absolute -inset-1 bg-gradient-to-r from-[#BF00FF] to-[#CCFF00] rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"
                    >
                    </div>
                    <div class="relative bg-black border border-[#333] p-6">
                        <div
                            class="aspect-square bg-[#111] mb-6 relative overflow-hidden"
                        >
                            <img
                                src="/images/nexus-hero.png"
                                class="w-full h-full object-cover opacity-80 hover:scale-110 transition-transform duration-500"
                            />
                            <div
                                class="absolute top-4 right-4 bg-[#BF00FF] text-white text-xs font-disruptor-body px-2 py-1"
                            >
                                1/500
                            </div>
                        </div>
                        <div class="flex justify-between items-end">
                            <div>
                                <h3
                                    class="font-disruptor-header text-2xl font-bold mb-1"
                                >
                                    NEURAL HOODIE
                                </h3>
                                <p
                                    class="font-disruptor-body text-xs text-gray-500"
                                >
                                    Heavyweight Cotton / AR Enabled
                                </p>
                            </div>
                            <div class="text-right">
                                <div
                                    class="font-disruptor-body text-[#CCFF00] text-xl"
                                >
                                    0.08 ETH
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- MARQUEE -->
        <div
            class="bg-[#CCFF00] text-black py-3 overflow-hidden border-y border-black"
        >
            <div
                class="animate-[marquee_20s_linear_infinite] whitespace-nowrap font-disruptor-body font-bold text-lg uppercase tracking-widest flex items-center gap-12"
            >
                <span>System Breach</span>
                <span>///</span>
                <span>New Arrivals</span>
                <span>///</span>
                <span>Digital Scarcity</span>
                <span>///</span>
                <span>No Refunds</span>
                <span>///</span>
                <span>System Breach</span>
                <span>///</span>
                <span>New Arrivals</span>
                <span>///</span>
                <span>Digital Scarcity</span>
                <span>///</span>
                <span>No Refunds</span>
                <span>///</span>
            </div>
        </div>

        <!-- FEATURES -->
        <section class="py-24 px-6 bg-[#0a0a0a]">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                    <!-- Feature 1 -->
                    <div
                        class="border border-[#333] p-8 hover:border-[#BF00FF] transition-colors group"
                    >
                        <Zap
                            class="w-10 h-10 text-[#BF00FF] mb-6 group-hover:animate-pulse"
                        />
                        <h3
                            class="font-disruptor-header font-bold text-2xl mb-4"
                        >
                            NFC AUTHENTICATED
                        </h3>
                        <p
                            class="font-disruptor-body text-gray-500 text-sm leading-relaxed"
                        >
                            Every garment contains a cryptographic chip. Scan to
                            verify ownership on the blockchain.
                        </p>
                    </div>

                    <!-- Feature 2 -->
                    <div
                        class="border border-[#333] p-8 hover:border-[#CCFF00] transition-colors group"
                    >
                        <Disc
                            class="w-10 h-10 text-[#CCFF00] mb-6 group-hover:animate-spin"
                        />
                        <h3
                            class="font-disruptor-header font-bold text-2xl mb-4"
                        >
                            AR READY
                        </h3>
                        <p
                            class="font-disruptor-body text-gray-500 text-sm leading-relaxed"
                        >
                            Point your phone at the graphic. Watch the artwork
                            come alive in 3D space.
                        </p>
                    </div>

                    <!-- Feature 3 -->
                    <div
                        class="border border-[#333] p-8 hover:border-[#BF00FF] transition-colors group"
                    >
                        <ShoppingBag class="w-10 h-10 text-[#BF00FF] mb-6" />
                        <h3
                            class="font-disruptor-header font-bold text-2xl mb-4"
                        >
                            LIMITED DROPS
                        </h3>
                        <p
                            class="font-disruptor-body text-gray-500 text-sm leading-relaxed"
                        >
                            Once a collection is sold out, the patterns are
                            deleted from our servers.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-32 text-center bg-[#050505] relative">
            <div
                class="absolute inset-0 bg-[url('/images/grid.png')] opacity-10"
            >
            </div>
            <h2
                class="font-disruptor-header font-extrabold text-5xl md:text-8xl mb-8 text-white"
            >
                JOIN THE<br /><span class="text-[#BF00FF]">RESISTANCE</span>
            </h2>
            <button
                class="border border-[#CCFF00] text-[#CCFF00] px-12 py-4 font-disruptor-body font-bold text-sm uppercase hover:bg-[#CCFF00] hover:text-black transition-colors"
            >
                Get Early Access
            </button>
        </section>
    </main>
</Layout>
