---
import Layout from "../../layouts/Layout.astro";
import {
    Terminal,
    Cpu,
    Activity,
    Database,
    Zap,
    Lock,
    Layers,
    Box,
    Grid,
} from "lucide-astro";
---

<Layout title="The Architect | Aesthetic Vault">
    <!-- Font Import for Monospace -->
    <style>
        @import url("https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@100..800&display=swap");

        .font-mono-arch {
            font-family: "JetBrains Mono", monospace;
        }

        .grid-bg {
            background-size: 40px 40px;
            background-image:
                linear-gradient(
                    to right,
                    rgba(0, 255, 65, 0.05) 1px,
                    transparent 1px
                ),
                linear-gradient(
                    to bottom,
                    rgba(0, 255, 65, 0.05) 1px,
                    transparent 1px
                );
        }
    </style>

    <main
        class="bg-black min-h-screen text-[#00ff41] font-mono-arch selection:bg-[#00ff41] selection:text-black"
    >
        <!-- NAVIGATION -->
        <nav
            class="border-b border-[#00ff41]/20 p-4 sticky top-0 bg-black/90 backdrop-blur z-50"
        >
            <div class="max-w-7xl mx-auto flex justify-between items-center">
                <a
                    href="/studio"
                    class="text-xs hover:bg-[#00ff41] hover:text-black px-2 py-1 transition-colors"
                >
                    <span class="opacity-50">&lt;</span> RETURN_TO_ROOT
                </a>
                <div class="text-xs tracking-widest opacity-50">
                    SYSTEM: ONLINE
                </div>
            </div>
        </nav>

        <!-- BRAND A: QUANTUM LOGIC -->
        <section
            class="min-h-screen relative border-b border-[#00ff41]/20 grid-bg p-6 md:p-20 flex flex-col justify-center overflow-hidden"
        >
            <div class="max-w-7xl mx-auto w-full relative z-10">
                <div
                    class="inline-block border border-[#00ff41] px-2 py-1 text-xs mb-8 animate-pulse"
                >
                    STATUS: DEPLOYED
                </div>

                <h1
                    class="text-6xl md:text-9xl font-bold tracking-tighter mb-6 uppercase break-words"
                >
                    &lt;DEPLOY_<br />INTELLIGENCE&gt;
                </h1>

                <p
                    class="text-xl md:text-2xl max-w-3xl mb-12 opacity-80 leading-relaxed"
                >
                    We process 4TB of market data per second. Your competitors
                    are guessing. We are calculating.
                </p>

                <div class="flex flex-col md:flex-row gap-6 items-start">
                    <button
                        class="bg-[#00ff41] text-black px-8 py-4 text-lg font-bold hover:bg-white transition-colors uppercase"
                    >
                        [ INITIALIZE_DEMO ]
                    </button>
                    <div
                        class="flex items-center gap-4 text-sm opacity-70 py-4"
                    >
                        <span>/// LATENCY: 4MS</span>
                        <span>/// ENCRYPTION: SHA-256</span>
                    </div>
                </div>

                <!-- Feature Grid -->
                <div
                    class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-24 border-t border-[#00ff41]/20 pt-12"
                >
                    <div class="group">
                        <div class="mb-4 opacity-50">01_INGEST</div>
                        <h3
                            class="text-2xl font-bold mb-2 group-hover:translate-x-2 transition-transform"
                        >
                            API-FIRST INTEGRATION
                        </h3>
                        <p class="opacity-60 text-sm">
                            Seamless connection to all data lakes.
                        </p>
                    </div>
                    <div class="group">
                        <div class="mb-4 opacity-50">02_PROCESS</div>
                        <h3
                            class="text-2xl font-bold mb-2 group-hover:translate-x-2 transition-transform"
                        >
                            REAL-TIME STRUCTURATION
                        </h3>
                        <p class="opacity-60 text-sm">
                            Turning chaos into structured JSON.
                        </p>
                    </div>
                    <div class="group">
                        <div class="mb-4 opacity-50">03_EXECUTE</div>
                        <h3
                            class="text-2xl font-bold mb-2 group-hover:translate-x-2 transition-transform"
                        >
                            AUTOMATED DECISION TREES
                        </h3>
                        <p class="opacity-60 text-sm">
                            Logic gates that fire in microseconds.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Decorative Elements -->
            <div
                class="absolute top-20 right-20 w-64 h-64 border border-[#00ff41]/10 rounded-full animate-[spin_10s_linear_infinite]"
            >
            </div>
            <div
                class="absolute bottom-20 left-20 w-32 h-32 border border-[#00ff41]/10 rotate-45"
            >
            </div>
        </section>

        <!-- BRAND B: STRUCTURA -->
        <section
            class="min-h-screen bg-[#0a0a0a] text-[#e0e0e0] relative p-6 md:p-20 flex flex-col justify-center"
        >
            <!-- Grid Overlay -->
            <div
                class="absolute inset-0"
                style="background-image: linear-gradient(#333 1px, transparent 1px), linear-gradient(90deg, #333 1px, transparent 1px); background-size: 100px 100px; opacity: 0.2; pointer-events: none;"
            >
            </div>

            <div class="max-w-7xl mx-auto w-full relative z-10">
                <div
                    class="flex justify-between items-end border-b-4 border-white pb-8 mb-20"
                >
                    <div>
                        <h2
                            class="text-7xl md:text-8xl font-bold tracking-tighter uppercase"
                        >
                            Form<br />Follows<br />Physics.
                        </h2>
                    </div>
                    <div class="hidden md:block text-right">
                        <div class="text-sm tracking-widest mb-2">
                            EST. 2024
                        </div>
                        <div class="text-4xl font-bold">AWARDS: 14</div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-20">
                    <div>
                        <p class="text-2xl leading-relaxed mb-12">
                            Residential design stripped of ego. We build
                            structures that outlast the trends.
                            <br /><br />
                            <span class="opacity-50 text-lg"
                                >STEEL /// CONCRETE /// GLASS /// LIGHT /// VOID
                                /// VOLUME</span
                            >
                        </p>
                        <button
                            class="border-2 border-white px-10 py-4 text-lg font-bold hover:bg-white hover:text-black transition-all uppercase tracking-widest"
                        >
                            [ VIEW BLUEPRINTS ]
                        </button>
                    </div>

                    <div class="grid grid-cols-1 gap-8">
                        <div
                            class="border border-white/20 p-8 bg-white/5 backdrop-blur-sm"
                        >
                            <h3 class="text-xl font-bold mb-4 uppercase">
                                Specs
                            </h3>
                            <p class="opacity-70">
                                4000sqft footprints. Optimized for minimal
                                environmental impact while maximizing volume.
                            </p>
                        </div>
                        <div
                            class="border border-white/20 p-8 bg-white/5 backdrop-blur-sm"
                        >
                            <h3 class="text-xl font-bold mb-4 uppercase">
                                Material
                            </h3>
                            <p class="opacity-70">
                                Brutalist concrete finish. Raw, honest,
                                unpainted surfaces that age with dignity.
                            </p>
                        </div>
                        <div
                            class="border border-white/20 p-8 bg-white/5 backdrop-blur-sm"
                        >
                            <h3 class="text-xl font-bold mb-4 uppercase">
                                Light
                            </h3>
                            <p class="opacity-70">
                                Solar-path orientation. We sculpt with shadows
                                as much as we build with stone.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
